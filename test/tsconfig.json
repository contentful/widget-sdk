{
  "compilerOptions": {
    "baseUrl": "../node_modules",
    "incremental": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2016",
    "types": ["cypress", "cypress-testing-library"],
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "strict": true,
    "noEmitOnError": true,
    "noErrorTruncation": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "pretty": true
  },
  "compileOnSave": false,
  "include": ["./**/*.ts", "../node_modules/@contentful/cypress-pact"]
}
