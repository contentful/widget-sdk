.row.entries{'ng-controller' => 'ContentCtrl'}
  .span2
    %ul.nav.nav-pills
      %li{'ng-class' => "{active: contentType=='entries'}"}
        %a{'ng-click' => "switchContentType('entries')"} Entries
      %li{'ng-class' => "{active: contentType=='media'}"}
        %a{'ng-click' => "switchContentType('media')"} Media
    
    %div{'ng-switch' => 'contentType'}
      %ul.nav.nav-list{'ng-switch-when' => 'entries'}
        %li.divider
        %li{'ng-class' => "{active: entrySection=='all'}"}
          %a{'ng-click' => "switchEntrySection('all')"} All
        %li.disabled{'ng-class' => "{active: entrySection=='drafts'}"}
          %a Drafts
        %li{'ng-class' => "{active: entrySection=='published'}"}
          %a{'ng-click' => "switchEntrySection('published')"} Published
        %li.disabled{'ng-class' => "{active: entrySection=='archive'}"}
          %a Archive
        %li.disabled{'ng-class' => "{active: entrySection=='starred'}"}
          %a Starred
        %li.disabled{'ng-class' => "{active: entrySection=='createdByMe'}"}
          %a Created by me
      
        %li.nav-header Saved searches
      
        %li.disabled
          %a Updated by me
        %li.disabled
          %a Large Rooms

        %li.nav-header Labels?
      
        %li.disabled
          %a Todo
        
  .span2{'bind-template' => 'contentTemplate'}
    Entries-Content {{contentType}}