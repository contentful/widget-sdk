.results-count(ng-show="isActive() && paginator.numEntries")
  {{paginator.numEntries|decimalMarks}} results, {{paginator.page+1}} of {{paginator.numPages()|decimalMarks}} pages
  %span(ng-transclude)

.sorting-options(ng-show="isActive() && isSortingActive()")
  %button.btn.btn--flat(ng-click="sortBy('default')" ng-show="getty.families.editorial" ng-class="{active: currentSortOrder == 'Default'}")
    Best Match
  %button.btn.btn--flat(ng-click="sortBy('MostRecent')" ng-class="{active: !hasBlendedSortOrder && currentSortOrder == 'MostRecent'}")
    Most Recent
  %button.btn.btn--flat(ng-click="sortBy('MostPopular')" ng-class="{active: !hasBlendedSortOrder && currentSortOrder == 'MostPopular'}")
    Most Popular


