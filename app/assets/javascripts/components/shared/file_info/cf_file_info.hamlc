.file-info
  .file-preview(cf-file-preview="file" preview-size="fullscreen")
    .vcenter(cf-thumbnail="file" ng-show="file.url")
  .file-spinner(ng-show="file|isFileProcessing")
    .status-text Processingâ€¦
  -#.cf-file-drop(ng-show="!file")
  .file-metadata(ng-show="showMeta")
    %table
      %tr
        %th Filename
        %td {{file.fileName}}
      %tr
        %th Type
        %td(title="{{file.contentType}}") {{file | mimeGroup}}
      %tr(ng-show="file.details.size")
        %th Size
        %td(title="{{file.details.size}} Bytes") {{file.details.size | fileSize}}
      %tr(ng-show="file.details.image")
        %th Width<br>Height
        %td {{file.details.image.width}}&thinsp;px<br>{{file.details.image.height}}&thinsp;px

  .title-overlay(ng-hide="file || enableUpload")
    {{title}}
  .no-file.center.vcenter(ng-hide="file || enableUpload")
    Asset has no file

  .file-buttons(ng-class="{vcenter: !file && enableUpload, center: !file && enableUpload}")
    %button.upload-button(type="button" ng-click="uploadFile()" ng-hide="file || !enableUpload") Upload File
    %button.go-to-asset(type="button" ng-click="editEntity()" ng-show="!enableUpload" tooltip="Go to asset")
      %i.ss-action
    %a.as-button.download-file(type="button" href="{{file.url}}" target="_blank" ng-show="file|isFileReady" tooltip="Download file")
      %i.ss-download
    %button.show-metadata(type="button" ng-click="toggleMeta()" ng-show="file" tooltip="Show file information")
      %i.ss-info
    %button.delete-file(type="button" ng-show="deleteFile && file" ng-click="deleteFile()" tooltip="Delete file")
      %i.ss-trash
    %button.remove-link(type="button" ng-show="removeLink" ng-click="removeLink()" tooltip="Remove link")
      %i.ss-delete
