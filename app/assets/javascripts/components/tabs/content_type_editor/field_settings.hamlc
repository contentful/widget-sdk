.drag-handle(ng-disabled="!otEditable")
  %i.ss-rows
.name
  %input(ng-model="field.name"
         ng-disabled="!otEditable"
         ot-path="['fields', index, 'name']"
         ot-subdoc ot-bind-text type="text"
         tooltip-placement="right"
         tooltip="Field title displayed to editors")
  .cf-validation-error-display.form-inline-error(cf-error-path="['fields', index, 'name']")
.identifier {{field.id}}
.type {{getFieldTypeName(field)}}
.display(ot-path="['displayField']")
  %input(type="radio" name="displayField"
    ng-model="contentType.data.displayField"
    value="{{field.id}}"
    ng-disabled="!displayEnabled(field) || !otEditable"
    ot-bind-model tooltip-placement="left"
    tooltip="Use as title in interface")
.localized(ot-path="['fields', index, 'localized']")
  %input(type="checkbox" ng-model="value" ot-bind-model
         tooltip-placement="left"
         ng-disabled="!otEditable"
         tooltip="Content in this field is localized")
.required(ot-path="['fields', index, 'required']")
  %input(type="checkbox" ng-model="value" ot-bind-model
         tooltip-placement="left"
         ng-disabled="!otEditable"
         tooltip="Make field mandatory")
.validations
  %a.button(ng-show="hasValidations"
            ng-click="toggleValidations(field.id)"
            tooltip-placement="left"
            tooltip="Validate content in this Field")
    %i.ss-settings
  %a.button(ng-hide="hasValidations"
            tooltip-placement="left"
            tooltip="No validations available for this type"
            disabled="disabled")
    %i.ss-settings
.action(ng-class="{archived: !published, published: published && !field.disabled, draft: published && field.disabled}")
  %a.button.delete(ng-show="!published"
                   ng-click="delete()"
                   tooltip-placement="left"
                   tooltip="Delete this Field")
    %i.ss-trash
  %a.button.deactivate(ng-show="published && !field.disabled"
                       ng-disabled="!otEditable"
                       ng-click="otEditable && disable()"
                       tooltip-placement="left"
                       tooltip="Hide this Field")
    %i.ss-check
  %a.button.activate(ng-show="published && field.disabled"
                     ng-disabled="!otEditable"
                     ng-click="otEditable && enable()"
                     tooltip-placement="left"
                     tooltip="Show this Field")
    %i.ss-ban
  .main-results-bar
