%header
  %p
    Validations
    %span(ng-show="field.type == 'Array'") for items in the list
.sections
  .section(ng-repeat="(validationIndex, validation) in validationList()")
    .name {{availableValidations[validationType(validation)]}}
    .validation-options
    .action
      %a.button.default-button.delete(ng-click="deleteValidation(validationIndex)" ng-show="otEditable")
        %i.remove.ss-delete
  .section(ng-controller="NewValidationCtrl" cf-validate="fieldWithNewValidation" with-schema="fieldSchema" ng-show="otEditable")
    .name
      %select(ng-model="newValidationType" ng-options="type as name for (type, name) in availableValidations" ng-change="prepareNewValidation()")
        %option(value="") Add newâ€¦
    .validation-options
    .action
      %button.default-button.button.new(type="button" ng-click="createValidation()" ng-disabled="!newValidationType || !validationResult.valid")
        %i.ss-plus
