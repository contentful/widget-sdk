.modal-background.validation-dialog
  .modal-dialog(ng-controller="FieldValidationDialogController")
    .title
      Validations for {{field.name}}
    .close-button(ng-click="dialog.cancel()")

    .validation-list
      .advice(ng-hide="validationList().length > 0")
        %i.ss-check.giant-icon
        %header.advice-title You have no Validations yet.
        %p.advice-description
          Select Validations and narrow further what type of content should be added to your Fields.
        .dropdown-btn
          %button.default-button.primary-button.dropdown-toggle(ng-disabled="!canAddValidations()")
            Create Validation
          .dropdown-menu.type-menu(select-validation="addValidation(type)")
      .cf-validation-options(ng-repeat="(validationIndex, validation) in validationList() track by validationIndex" ng-model="validation")

    .buttons(ng-show="validationList().length > 0")
      .dropdown-btn
        %button.default-button.primary-button.dropdown-toggle(ng-disabled="!canAddValidations()")
          %i.ss-plus.button-icon
          Add Validation
        .dropdown-menu.type-menu(select-validation="addValidation(type)")
