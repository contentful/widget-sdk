.field-widget-header(ng-click="toggleField(field)")
  .cf-fieldtype-icon(field="field" show-tooltip)
    %i.ss-help
  .widget-label
    {{displayedFieldName(field)}}
  .tools
    %i.ss-writingdisabled(ng-if="field.disabled")
    %a.toggle-collapse.on-right(ng-class="{open: isFieldOpen(field)}") â–¶
.details
  .form-horizontal
    .form-field
      %label
        Help text
      .form-controls
        .field-editor
          %input(type="text"
                 name="helpText"
                 placeholder="This help text will show up below the field"
                 ng-model="widget.widgetParams.helpText")
    .form-field
      %label
        Widget Type
      .form-controls
        .field-editor
          %select(ng-model="widget.widgetType"
                  ng-change="widgetTypeChanged()"
                  ng-options="type.id as type.name for type in widgetTypesForType")
    .form-field(ng-repeat="option in widgetOptions")
      %label {{option.name}}
      .form-controls
        .field-editor
          %input(type="text"
                 placeholder="{{option.description}}"
                 ng-model="widget.widgetParams[option.param]")
