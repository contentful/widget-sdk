%ng-switch(on="hasFile")
  %button(ng-switch-when="false" ng-click="uploadFile()") Upload File
  .file-info(ng-switch-default)
    %button.delete-file(ng-click="deleteFile()" ng-disabled="status() == 'processing'") Delete file
    %div(ng-show="status() == 'processing'")
      %i.ss-attach
      Filename: {{file.fileName}}
      %br
      Type: {{file.contentType}}
      Status: Processingâ€¦
    %div(ng-show="status() == 'ready'")
      %span(cf-thumbnail="file" size="50" cf-file-preview)
      %span Filename: {{file.fileName}}
      %br
      %span Type: {{file.contentType}}
      %br
      %span.url
        URL:
        %a(href="{{file.url}}" target="_blank") {{file.url}}

