%input.date(type="text" ng-model="localDate" ng-disabled="!otEditable")
%i.ss-calendar
%input.time(type="text" ng-model="localTime"
  ng-pattern="/^\s*(0|\\d|0\\d|1\\d|2[0-3]):[0-5][\\d](:[0-5][\\d])?\s*$/" ng-disabled="!otEditable")
%i.ss-clock
.select-box.around-zone
  %select.zone(ng-model="tzOffset" ng-options="offset for offset in timezones" tooltip="Timezone")
%i.ss-globe
%i.ss-alert.invalid-date(ng-show="dateInvalid" tooltip="You must provide a date" tooltip-placement="right")
