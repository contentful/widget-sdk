// Colors
//
// Styleguide 1.0

// Text and background colors
// 
// Colors used throughout the site
//
//
// $lighter-gray-background - \#fbfbfb rgb(251, 251, 251)
// Markup: <div class="colors colors__lighter-gray-background"></div>
// $gray-background         - \#f3f3f3 rgb(243, 243, 243)
// Markup: <div class="colors colors__gray-background"></div>
// $light-rule              - \#efefef rgb(239, 239, 239)
// Markup: <div class="colors colors__light-rule"></div>
// $page-background         - \#eaeaea rgb(234, 234, 234)
// Markup: <div class="colors colors__page-background"></div>
// $dark-rule               - \#e1e1e1 rgb(225, 225, 225)
// Markup: <div class="colors colors__dark-rule"></div>
// $lightest-gray           - \#dadada rgb(218, 218, 218)
// Markup: <div class="colors colors__lightest-gray"></div>
// $light-gray              - \#acacac rgb(172, 172, 172)
// Markup: <div class="colors colors__light-gray"></div>
// $medium-gray             - \#858585 rgb(133, 133, 133)
// Markup: <div class="colors colors__medium-gray"></div>
// $medium-dark-gray        - \#545454 rgb(84, 84, 84)
// Markup: <div class="colors colors__medium-dark-gray"></div>
// $dark-gray               - \#333333 rgb(51, 51, 51)
// Markup: <div class="colors colors__dark-gray"></div>
// $link-blue               - \#1683d0
// Markup: <a class="colors colors__link-blue">link blue</a>
//
// Styleguide 1.1
.colors
  width: 100px
  height: 50px

$lighter-gray-background = #fbfbfb
.colors__lighter-gray-background
  background-color: $lighter-gray-background
$gray-background         = #f3f3f3
.colors__gray-background
  background-color: $gray-background
$light-rule              = #efefef
.colors__light-rule
  background-color: $light-rule
$page-background         = #eaeaea
.colors__page-background
  background-color: $page-background
$dark-rule               = #e1e1e1
.colors__dark-rule
  background-color: $dark-rule
$lightest-gray           = #dadada
.colors__lightest-gray
  background-color: $lightest-gray
$light-gray              = #acacac
.colors__light-gray
  background-color: $light-gray
$medium-gray             = #858585
.colors__medium-gray
  background-color: $medium-gray
$medium-dark-gray        = #545454
.colors__medium-dark-gray
  background-color: $medium-dark-gray
$dark-gray               = #333333
.colors__dark-gray
  background-color: $dark-gray

$link-blue = #1683d0
.colors__link-blue
  color: $link-blue

// Status colors
//
// Colors used to represent statuses
//
// $blue       - \#3e97d6
// Markup: <div class="colors colors__blue"></div>
// $light-blue - \lighten($blue, 20%)
// Markup: <div class="colors colors__light-blue"></div>
// $green      - \#33ca6c
// Markup: <div class="colors colors__green"></div>
// $gold       - \#e6ae17
// Markup: <div class="colors colors__gold"></div>
// $red        - \#f2602e
// Markup: <div class="colors colors__red"></div>
// $dark-red   - \#d1322b
// Markup: <div class="colors colors__dark-red"></div>
//
// Styleguide 1.2
$blue       = #3e97d6
.colors__blue
  background-color: $blue
$light-blue = lighten($blue, 20%)
.colors__light-blue
  background-color: $light-blue
$green      = #33ca6c
.colors__green
  background-color: $green
$gold       = #e6ae17
.colors__gold
  background-color: $gold
$red        = #f2602e
.colors__red
  background-color: $red
$dark-red   = #d1322b
.colors__dark-red
  background-color: $dark-red

