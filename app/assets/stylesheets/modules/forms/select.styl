.inline-select
  background: transparent
  color: inherit
  font-size: inherit
  margin: 0
  margin-top: -1px

// Select boxes
//
// Styled native select boxes (TODO: standardize this according to styleguide after buttons)
//
// Markup:
// <div class="btn btn-flat select-box">
//   <select>
//     <option>value</option>
//   </select>
//   <i class="button-icon-right fa fa-caret-dropdown">
// </div>
//
// Styleguide 5.2
.select-box
  padding: 0px
  select
    width: 200%
    padding: 5px 12px
    margin: 0
    color: inherit
    font-size: inherit
    font-family: inherit
    border: none
    background: transparent
    border-radius: 0
    -webkit-appearance: none
    -moz-appearance: none
    appearance: none
  &:hover
    border-color: $gray
  .button-icon-right
    position: absolute
    left: auto
    float: none
    right: 7px
    top: 7px
    cursor: default
    pointer-events: none

.select-box__wrapper
  width: 90%
  overflow: hidden
