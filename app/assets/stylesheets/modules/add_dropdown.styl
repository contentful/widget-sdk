.nav-bar
  .dropdown-toggle
    height: $nav-bar-height
  .dropdown-toggle:hover
    $highlight($blue, 5%, 'lighten')
    box-shadow: none
  .add-dropdown-button
    $highlight($blue)
    padding: 0
    flex-grow: 0
    $nav-bar-dropdowns()
    .dropdown-menu
      width: 210px
      max-height: 700px
      overflow-y: auto
      .dropdown-menu-item
        display: block
        line-height: 40px
        height: auto
        padding-top: 0
        padding-bottom: 0
        &.hint
          line-height: inherit
      .dropdown-menu-list,
      .dropdown-menu-item,
      h3
        text-align: left
        width: 100%
    .tooltip.bottom
      width: 200px
    .content-types
      max-height: 500px
      overflow-y: auto
      li
        padding-left: 40px
        font-weight: normal
  .add.button
    color: white
    padding: 2px 10px 0px
    i
      top: 0px
      margin: 0 auto
      font-size: 14px
      font-weight: normal
    &:active
      top: 1px
    &:focus
      $focus-styles()

.add-btn
  height: $nav-bar-height
  .add.button
    .ss-dropdown
      float: none
      margin-left: 10px
      margin-right: 0px
  &.active
    box-shadow: inset 0px 0px 30px 30px rgba(0,0,0,0.3)
