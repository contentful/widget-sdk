$result-list-cell
  line-height: 18px
  vertical-align: middle
  padding: 8px 0px
  padding-right: 10px
  text-align: left
  white-space: nowrap
  overflow: hidden
  text-overflow: ellipsis
  span
    white-space: nowrap
    overflow: hidden
    text-overflow: ellipsis

$result-list-border-bottom
  tbody
    tr:last-child
      border-bottom: 1px solid $gray-lightest

