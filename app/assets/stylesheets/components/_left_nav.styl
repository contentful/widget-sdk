// Main results filters
.filter-list
  $plain-list()
  margin-bottom: 10px
.filter-list.ui-sortable
  min-height: 18px
.filter-list-nogap
  margin-top: -10px
.filter-list-item
  position: relative
  font-size: 12px
  padding: 4px $left-nav-padding
  border: 1px solid transparent
  cursor: pointer
.filter-list-item.active
  border: 1px solid $dark-rule
  border-radius: 3px  3px  3px  3px
  background: $gray-background
.filter-list-item-placeholder
  border: 1px dashed $light-gray
  height: 26px
  margin: 0px $left-nav-padding
.filter-list-title
  color: $link-blue
.filter-list-item:hover .filter-list-title
  text-decoration: underline
  color: $link-blue
.filter-list-item.active .filter-list-title
  font-weight: 600
  color: $dark-gray
.filter-list-item.active:hover .filter-list-title
  text-decoration: none
  color: $dark-gray

.inline-editor-form input
  width: 100%

.filter-list-well
  padding: 10px
  border: 1px solid $dark-rule
  border-radius: 3px
  background: $gray-background
  text-align: center
  max-width: 250px
  margin: 2em auto
  i.ss-redirect
    padding-top: 10px
    line-height: 60px
    display: block
    font-size: 50px

.menu-with-buttons
  height: 100%
  $display-flexbox()
  flex-direction: column
.menu-with-buttons-main
  flex: 1 1 0
  overflow-y: auto
.menu-with-buttons-bottom
  flex: 0 0 1
  margin-bottom: $left-nav-padding

.view-menu-buttons
  padding: 4px $left-nav-padding
  $display-flexbox()
  margin-top: 1em
  margin-bottom: 1em
  button
    flex-grow: 1

.filter-list-header
  color: $medium-gray
  border-bottom: 1px solid $light-rule
  margin-bottom: 8px
  padding: 0 $left-nav-padding 7px
  font-size: 11px
  text-transform: uppercase
.header-toggle.toggle-collapse
  color: $lightest-gray

.filter-list-row
  $display-flexbox()
  i
    position: relative
    top: 2px
    cursor: pointer
    color: silver
  i:hover
    color: inherit
.filter-list-row-main
  // Without this the div won't grow even if it's the only element in the container:
  flex-grow: 0.1
.filter-list-row-hover
  opacity: 0
  &.hover-remove
    display: none
.filter-list-row:hover .filter-list-row-hover
  opacity: 1
  &.hover-remove
    display: initial
.filter-list-row-middle
  flex: 0 0 4em
  text-align: left
.filter-list-row-end
  flex: 1 1 2em
  text-align: right


.filter-list-row-truncate
  overflow: hidden
  white-space: nowrap
  text-overflow: ellipsis
.filter-list-row-draggable
  cursor: move
  cursor: -webkit-grab

