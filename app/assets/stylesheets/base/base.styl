@import "nib/vendor"

*
  box-sizing(border-box)

body
  font-family: 'Open Sans', Arial, sans-serif
  font-size: 12px
  line-height: 18px
  color: $medium-gray
  background: url("/app/bg.jpg")
  background-size: 200px 150px
  overflow: hidden

button,
input[type="submit"]
  line-height: inherit
  font-family: inherit

button::-moz-focus-inner
  border: 0
  padding: 0
  outline: 0

table
  border-collapse: separate

a
  color: $link-blue
  text-decoration: none
  &:link
    color: $link-blue
    text-decoration: none
  &:hover
    color: $dark-link-blue

h1, h2, h3, h4, h5, h6
  color: $dark-gray
  line-height: 1em
  font-weight: bold
  margin: 18px 0 8px
  &:first-child
    margin-top: 0

h1
  font-size: 2.1em
  margin-bottom: .3em

h2
  font-size: 1.5em
  text-transform: uppercase // TODO kill this with fire

h3
  font-size: 1.2em

hr
  height: 1px
  background-color: $light-rule
  margin: 30px 0
  border: none

li
  list-style-type: none

li,
p,
blockquote
  margin-bottom: 10px

ul,
ol
  margin: 24px 0 24px 17px
  li
    margin-bottom: 5px

blockquote
  border-left: 4px solid $light-rule
  padding-left: 20px
  margin-top: 10px
  font-style: italic

b, strong
  color: $dark-gray
  font-weight: bold


