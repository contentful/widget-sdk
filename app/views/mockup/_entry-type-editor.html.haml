.entry-type-editor
  .tab-header.editor-configuration
    %h1
      Entry Type
    .editor-top-right<
      .dropdown-btn>
        %a.btn.active
          %span Meta
      .dropdown-btn>
        %a.btn
          %span Apps
      .dropdown-btn>
        %a.btn
          %span Events

  .aux-panel
    .meta
      %header
        %span Meta
        %i.ss-delete
      %article
        %table
          %tr
            %th Last Save
            %td 5 seconds ago
          %tr
            %th Published Version #
            %td 14
          %tr
            %th Current #
            %td 15
        %div

  .tab-main
    %form(name="entryTypeForm")
      // The .form-row corresponds to the .field in the entry editor, but since we're using
      // the .field class for the actual list  of fields, these here have to be named differently
      .form-field
        %label Name
        .editor
          %input(type="text")
      .form-field
        %label Description
        .editor
          %textarea
      .form-field.select-field
        %label Display Field
        .editor
          %select
            %option Name
            %option Title
      .form-field
        %label Fields
        .editor
          %table.result-list
            %thead
              %tr
                %th.cell.drag-handle 
                %th.cell.name Name
                %th.cell.identifier Identifier
                %th.cell.type Type
                %th.cell.localized Localized
                %th.cell.required Required
                %th.cell.validations Validations
                %th.cell.action
            %tbody
              - 2.times do
                %tr.field
                  %td.drag-handle
                    %i.ss-rows
                  %td.name
                    %input(value="FooBar" type="text")
                  %td.identifier foo_bar
                  %td.type Text
                  %td.localized
                  %td.required
                    %i.ss-check
                  %td.validations
                    %a.button
                      %i.ss-settings
                  %td.action.published
                    %a.button.deactivate
                      %i.ss-writingdisabled
                    .main-results-bar
              - 2.times do
                %tr.field
                  %td.drag-handle
                    %i.ss-rows
                  %td.name
                    %input(value="FooBar" type="text")
                  %td.identifier foo_bar
                  %td.type Text
                  %td.localized
                    %i.ss-flag
                  %td.required
                  %td.validations
                    %a.button
                      %i.ss-settings
                  %td.action.draft
                    %a.button.activate
                      %i.ss-write
                    .main-results-bar
              %tr.field
                %td.drag-handle
                  %i.ss-rows
                %td.name
                  %input(value="FooBar" type="text")
                %td.identifier foo_bar
                %td.type Text
                %td.localized
                  %i.ss-flag
                %td.required
                  %i.ss-check
                %td.validations
                  %a.button
                    %i.ss-settings
                %td.action.archived
                  %a.button.delete
                    %i.ss-trash
                  .main-results-bar

              %tr.field-validations
                %td(colspan="8")
                  %ul.validations-open 
                    %li
                      %header
                        %p Validations
                      .section
                        .name Size
                        .options
                          %input(type="text" value="" placeholder="Minimum size")
                          \-
                          %input(type="text" value="" placeholder="Maximum size")
                        .action
                          %a.button.delete
                            %i.ss-delete
                      .section
                        .name One of
                        .options
                          %input(type="text" placeholder="apple,orange,banana")
                          %span (separate allowed values by comma)
                        .action
                          %a.button.delete
                            %i.ss-delete
                      .section
                        .name Range
                        .options
                          %input.lower(type="text" placeholder="Minimum value")
                          \-
                          %input.upper(type="text" placeholder="Maximum value")
                        .action
                          %a.button.delete
                            %i.ss-delete
                      .section
                        .name Regular Expression
                        .options
                          %input.regexp(type="text")
                          Flags:
                          %input.flags(type="text")
                        .action
                          %a.button.delete
                            %i.ss-delete
                      .section
                        .name
                          %select
                            %option Add new
                            %option Foo
                        .options
                          %input.lower(type="text")
                          \-
                          %input.upper(type="text")
                        .action
                          %a.button.new
                            %i.ss-plus

                %table.result-list.new-field
                  %tr.field
                    %td.drag-handle &nbsp;
                    %td.name
                      %input(type="text" value="FooBar")
                    %td.identifier
                      %input(type="text" value="foo_bar")
                    %td.type
                      %select
                        %option Text
                        %option Location
                        %option â€¦
                    %td.localized
                      %i.ss-flag
                    %td.required
                      %i.ss-check
                    %td.validations
                      %a.button
                        %i.ss-settings
                    %td.action
                      %a.button.new
                        %i.ss-plus

  .tab-actions
    // No need to touch these in the entry type editor
    .button-set
      %button.delete Delete
      %button.archive Archive
      %button.unpublish Unpublish
      %button.publish Publish
    .save-status.green
      %i.ss-check
      %span All changes saved successfully
    .other-users
      %span 3 others online
      %ul
        %li.avatar
          %img(src="assets/avatar-2.jpg")
          .tip-container
            .tip
              Jan
              .arrow-down
              .arrow-down-border
        %li.avatar
          %img(src="assets/avatar-3.jpg")
          .tip-container
            .tip
              Stephan
              .arrow-down
              .arrow-down-border
        %li.avatar
          %img(src="assets/avatar-4.jpg")
          .tip-container
            .tip
              Chris
              .arrow-down
              .arrow-down-border




