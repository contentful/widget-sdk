!!!
%html
%head
  %title Contentful

  = stylesheet_link_tag    "application", :media => "all"
  = requirejs_include_tag "application"
  = csrf_meta_tags

%body{"ng-controller" => "ClientCtrl"}
  .navbar.navbar-fixed-top
    .navbar-inner
      .container
        %form.navbar-form.pull-left
          %select{'ng-model' => 'bucket', 'ng-options' => "bucket.data.name for bucket in buckets"}
        .pull-right        
          %a.brand{:href => "#"} Contentful

  .container-fluid.main{'ng-controller' => 'BucketCtrl'}
    .row-fluid
      .span2
        %ul.nav.nav-list.bucket-nav
          %li{'ng-class' => "{active: entitySection=='entry_types'}"}
            %a{'ng-click' => "visitEntitySection('entry_types')"} Content-Model
          %li{'ng-class' => "{active: entitySection=='entries'}"}
            %a{'ng-click' => "visitEntitySection('entries')"} Content
          %li
            %a(href="/del") Content Delivery
          %li
            %a(href="/work") Workflows
          %li
            %a(ng-click="location.path('apps')") Apps
      .span10.bucket-entity{'ng-view'=>''}
        %ul{"ng-show" => "buckets.length"}
          %li{"ng-repeat" => "bucket in buckets"}
            ID: {{bucket.getId()}}
            %br/
            Name:{{bucket._primitiveRep.name}}
