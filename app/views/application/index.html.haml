!!!
%html
%head
  %title Contentful

  = stylesheet_link_tag    "application", :media => "all"
  = javascript_include_tag "static"
  = requirejs_include_tag  "application"
  = csrf_meta_tags

%body{"ng-controller" => "ClientCtrl"}
  .navbar
    .navbar-inner
      .container
        %form.navbar-form.pull-left
          %select{'ng-model' => 'bucketContext.bucket', 'ng-options' => "bucket.data.name for bucket in buckets"}
  %bucket-view.container-fluid(tab-list="tabList" bucket-context="bucketContext")
  = javascript_include_tag 'https://maps.googleapis.com/maps/api/js?key=AIzaSyDskFlzw1ujRovNWNG3K64EUsncYTbRPfM&sensor=false'
