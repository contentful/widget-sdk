$line-factor = 1.4

$rhythm(n = 1)
  return n * $line-factor * 1rem

$font-scale(scale)
  return 1em * (1.33333 ** scale)

$color-main = hsl(263, 47%, 39%)
// $color-link = hsl(246, 52%, 51%)
$color-link = $color-main

@import "font-faces";

html, body
  font-size: 16px;
  line-height: $line-factor;
  color: hsl(0, 0%, 10%)

  font-family: "Source Sans Pro"

code
  font-family: "Source Code Pro"
  font-style: normal
  font-size: 0.9em

a, a:visited
  color: $color-link
  text-decoration: none

a:hover, a:active, a:focus
  text-decoration: underline

.main-body-grid
  height: 100vh
  display: flex

.grid-right
  overflow-y: auto;
  flex-grow: 1;

.main-content
  padding: $rhythm(2) 3em;
  max-width: 50em;

.icon-link
  &:hover, &:active, &:focus
    text-decoration: none

/**
 * Generic styles for HTML generated by markdown.
 */
.code-block
.md-code-block
  overflow-x: auto
  padding: $rhythm(0.5) 1em
  margin: $rhythm(1) -0.8em;
  border-radius: 8px

.md-code-inline
  background: hsl(0, 0%, 97%)
  padding: 0.1em 0.4em;


$base-profile()
  h1, h2
    font-weight: 700
    line-height: $rhythm(2)

  h1
    font-size: $font-scale(3);
    margin-bottom: $rhythm(1)

  h2
    font-size: $font-scale(2);
    margin-top: $rhythm(2)
    margin-bottom: $rhythm(0.5)

  h3
    font-size: $font-scale(1.5);
    margin-top: $rhythm(1.5)
    margin-bottom: $rhythm(0.5)

  em
    font-style: italic;
  strong
    font-weight: bold

  p
    margin-bottom: $rhythm(0.5);

  ul, ol
    margin-top: $rhythm(0.5);
    margin-bottom: $rhythm(0.5);
    padding-left: $rhythm(1.2)
  ul
    list-style: disc
  ol
    list-style: decimal inside


/**
 * Styles for guides
 *
 * Markdown guides will be displayed inside this profile.
 */
.guide-profile
  $base-profile()
  h3
    font-weight: 700
    font-size: $font-scale(1);
    margin-top: $rhythm(1)
  h1 + p
    font-size: $font-scale(1);
    font-style: italic;


/**
 * Styles for API docs
 *
 * API documentation will be displayed inside this profile.
 */
.api-profile
  $base-profile()
  code
    background-color: hsl(0, 0%, 95%)

  pre
    margin-bottom: $rhythm(0.5);
    padding: $rhythm(0.2) $rhythm(0.4)
    background-color: hsl(0, 0%, 90%)
    border-radius: 4px
    code
      background-color: transparent

  h2
    font-size: $font-scale(1);
    text-transform: uppercase
    color: $color-main

.directive-scope-provides-header
.api-members h3
  font-weight: 600;
  padding-bottom: $rhythm(0.5);
  border-bottom: 1px solid hsl(0, 0%, 80%)
  margin-bottom: $rhythm(0.5)

.api-members > li
  margin-bottom: $rhythm(1);

.api-module-components
  td
    padding-top: $rhythm(0.5)
    padding-bottom: $rhythm(0.5)
  td + td
    padding-left: 2em



@import "navigation";
