{
  "compilerOptions": {
    "target": "es6",
    "baseUrl": "./src/javascripts",
    "rootDirs": ["./src/javascripts"],
    "module": "commonjs",
    "esModuleInterop": true,
    "isolatedModules": true,
    "noEmit": true,
    "allowJs": true,
    "jsx": "react",
    "lib": ["dom", "es2015"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "alwaysStrict": true,
    "noImplicitThis": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "skipLibCheck": true,

    // enable the following when we ready
    "noImplicitAny": false,
    "types": ["node", "jest", "testing-library__jest-dom"],
    "resolveJsonModule": true
  },
  "include": ["./src/javascripts/**/*"],
  "exclude": ["**/node_modules"]
}
