{
  "compilerOptions": {
    "baseUrl": "./src/javascripts",
    "module": "commonjs",
    "esModuleInterop": true,
    "isolatedModules": true,
    "noEmit": true,
    "allowJs": true,
    "jsx": "react",
    "lib": ["dom", "es2015"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "alwaysStrict": true,
    "noImplicitThis": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,

    // enable the following when we ready
    "noImplicitAny": false,
    "types": ["node", "jest"]
  },
  "include": ["./src/javascripts/**/*", "../node_modules/@types/jest"],
  "exclude": ["**/node_modules"]
}
