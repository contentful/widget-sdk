#!/bin/bash


repo_root="$(readlink --canonicalize "$(dirname $0)/../")"
firefox_bin="${repo_root}/vendor/firefox/firefox"
firefox_url="https://download-installer.cdn.mozilla.net/pub/firefox/releases/46.0.1/linux-x86_64/en-US/firefox-46.0.1.tar.bz2"
if [[ ! -x "${firefox_bin}" ]]; then
  echo "Installing Firefox 46.0.1 into 'vendor' directory..."
  curl --progress-bar "${firefox_url}" | tar -jx -C vendor
fi
