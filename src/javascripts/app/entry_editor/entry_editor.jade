react-component(
  name="components/shared/DocumentTitle"
  props="{title: [title, 'Content']}"
)
.entry-editor
  .workbench
    header.workbench-header
      react-component(name="app/entity_editor/Components/BackNav")
      cf-icon.workbench-header__icon(name="page-content", scale="0.75")
      react-component(
        name="components/shared/WorkbenchTitle"
        props="{title, localeName: localeData.focusedLocale.name, isSingleLocaleModeOn: localeData.isSingleLocaleModeOn, contentTypeName: editorData.contentType.data.name }"
      )
      .workbench-header__actions
        react-component(
          name="app/entity_editor/EntityAuxToggle"
          props="sidebarToggleProps.auxToggle"
        )
        react-component(
          ng-if="shouldDisplayCommentsToggle"
          name="app/entity_editor/EntityCommentsToggle"
          props="sidebarToggleProps.commentsToggle"
        )
        react-component(
          name="app/entity_editor/EntryTitlebar/EntrySecondaryActions"
          props="{entityInfo: editorData.entityInfo, entryActions, onDelete: state.delete}"
        )

    .workbench-main
      .workbench-main__content.sticky-parent
        react-component(name="app/entity_editor/StatusNotification" props="statusNotificationProps")
        react-component(
          ng-if="editorData.editorExtension"
          name="app/entry_editor/CustomEditorExtensionRenderer"
          props="customExtensionProps"
        )
        .entity-editor-form.cf-workbench-content.cf-workbench-content-type__text(ng-if="!editorData.editorExtension")
          cf-error-list.form-box-error(cf-error-path="['fields']")
          cf-entity-field(ng-repeat="widget in widgets track by widget.fieldId")
          react-component(
            name="components/tabs/NoLocalizedFieldsAdvice"
            ng-if="shouldDisplayNoLocalizedFieldsAdvice"
            props="noLocalizedFieldsAdviceProps")

      .workbench-main__sidebar
        react-component(name="app/EntrySidebar/EntrySidebar" props="entrySidebarProps")
