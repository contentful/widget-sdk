react-component(
  name="components/shared/DocumentTitle"
  props="{title: [title, 'Media']}"
)
div.asset-editor.workbench
  header.workbench-header
    react-component(name="app/entity_editor/Components/BackNav")
    cf-icon.workbench-header__icon(name="page-media", scale="0.75")
    h1.workbench-header__title
      | {{ title }}
      span.locale(ng-if="localeData.isSingleLocaleModeOn")
        | &nbsp;- {{localeData.focusedLocale.name}}
      react-component(
        name="components/shared/knowledge_base_icon/KnowledgeBase"
        props="{target: 'asset', className: 'workbench-header__kb-link'}"
      )

    .workbench-header__actions
      button.btn-secondary-action(
        data-test-id="trigger-delete-modal"
        ui-command="state.delete")
        | Delete

  .workbench-main
    .workbench-main__content
      react-component(name="app/entity_editor/StatusNotification" props="statusNotificationProps")

      .entity-editor-form.cf-workbench-content.cf-workbench-content-type__text
        cf-error-list.form-box-error(cf-error-path="['fields']")
        cf-entity-field(ng-repeat="widget in widgets track by widget.fieldId")

    .workbench-main__sidebar
      react-component(name="app/EntrySidebar/EntrySidebar" props="{entrySidebarProps, sidebarToggleProps: { commentsToggle: {isEnabled: false }}}")
