include ./cf_developer_resources_mixins

section
  ul.tab-list.x--home(cf-ui-sticky)
    li(
      role="tab"
      aria-selected="{{resources.selected === language}}"
      ng-click="resources.selectLanguage(language)"
      ng-repeat="language in resources.languages track by $index")
      | {{language}}
  section.home-section(ng-switch="resources.selected" cf-track-copy-event)
    h3.home-section__heading Get the SDK
    div(ng-switch-when="PHP")
      +sdk-section-php
    div(ng-switch-when=".NET")
      +sdk-section-dotnet
    div(ng-switch-when="Ruby")
      +sdk-section-ruby
    div(ng-switch-when="iOS")
      +sdk-section-ios
    div(ng-switch-when="Android")
      +sdk-section-android
    div(ng-switch-when="Java")
      +sdk-section-java
    div(ng-switch-when="Python")
      +sdk-section-python
    div(ng-switch-default)
      +sdk-section-javascript

  section.home-section(ng-if="resources.languageResources.examples.length")
    h3.home-section__heading Build with Contentful
    p.home-section__description
      | Here are examples of what you can build with Contentful.
    .home__examples
      .home-example(
        ng-repeat="example in resources.languageResources.examples track by example.name")
        div
          .home-example__dot
          h4.home-example__header {{example.name}}
          p.home-example__description {{example.description}}
        a.home-example__link(
          ng-href="{{example.url}}"
          target="_blank" rel="noopener noreferrer"
          ng-click="resources.analytics.linkOpened(resources.selected, example.url)")
          | View

  section.home-section
    h3.home-section__heading Learning &amp; documentation
    p.home-section__description
      | What you need to help you get started.
    .home-links
      .home-links__col(ng-if="resources.languageResources.links.length")
        a(
          ng-repeat="link in resources.languageResources.links track by link.name"
          ng-href="{{link.url}}"
          target="_blank" rel="noopener noreferrer"
          ng-click="resources.analytics.linkOpened(resources.selected, link.url)")
          | {{link.name}}
      .home-links__col
        a(ng-repeat="link in resources.docsUrls track by link.name"
          ng-href="{{link.url}}"
          target="_blank" rel="noopener noreferrer"
          ng-click="resources.analytics.linkOpened(resources.selected, link.url)")
          | {{link.name}}
