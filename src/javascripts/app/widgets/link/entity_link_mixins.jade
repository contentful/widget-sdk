mixin entity-link-status
  .entity-status(ng-class="status")
    .status-bar

mixin entity-link-actions
  .link-editor-link__toolbar-actions(ng-if="!selectable")
    cf-icon(
      ng-if="linksApi.goToEditor"
      name="edit"
      ng-click="linksApi.goToEditor(link)")

    a(
      ng-if="downloadUrl"
      ng-href="{{ downloadUrl }}"
      target="_blank")
      cf-icon(name="download")

    cf-icon(
      ng-if="linksApi.removeFromList"
      name="delete"
      ng-click="linksApi.removeFromList(link)")
