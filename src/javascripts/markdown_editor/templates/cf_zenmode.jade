.cf-zenmode
  .zenmode-toolbar
    .zenmode-logo.app-top-bar__logo-element
      cf-icon(name="logo-label")

    react-component(
      name="markdown_editor/components/HeadingContextMenu"
      props="{actions: actions, isZenMode: true}"
    )
    react-component(
      name="markdown_editor/components/ActionComponent"
      props="{actions: actions, name: 'bold', isZenMode: true, isDisabled: false}"
    )
    react-component(
      name="markdown_editor/components/ActionComponent"
      props="{actions: actions, name: 'italic', isZenMode: true, isDisabled: false}"
    )
    react-component(
      name="markdown_editor/components/ActionComponent"
      props="{actions: actions, name: 'quote', isZenMode: true, isDisabled: false}"
    )
    react-component(
      name="markdown_editor/components/ActionComponent"
      props="{actions: actions, name: 'ul', isZenMode: true, isDisabled: false}"
    )
    react-component(
      name="markdown_editor/components/ActionComponent"
      props="{actions: actions, name: 'ol', isZenMode: true, isDisabled: false}"
    )
    react-component(
      name="markdown_editor/components/ActionComponent"
      props="{actions: actions, name: 'link', isZenMode: true, isDisabled: false}"
    )
    react-component(
      name="markdown_editor/components/ActionComponent"
      props="{actions: actions, name: 'strike', isZenMode: true, isDisabled: false}"
    )
    react-component(
      name="markdown_editor/components/ActionComponent"
      props="{actions: actions, name: 'code', isZenMode: true, isDisabled: false}"
    )
    react-component(
      name="markdown_editor/components/ActionComponent"
      props="{actions: actions, name: 'hr', isZenMode: true, isDisabled: false}"
    )
    react-component(
      name="markdown_editor/components/ActionComponent"
      props="{actions: actions, name: 'indent', isZenMode: true, isDisabled: false}"
    )
    react-component(
      name="markdown_editor/components/ActionComponent"
      props="{actions: actions, name: 'dedent', isZenMode: true, isDisabled: false}"
    )
    react-component(
      name="markdown_editor/components/ActionComponent"
      props="{actions: actions, name: 'embed', isZenMode: true, isDisabled: false}"
    )
    react-component(
      name="markdown_editor/components/ActionComponent"
      props="{actions: actions, name: 'table', isZenMode: true, isDisabled: false}"
    )
    react-component(
      name="markdown_editor/components/ActionComponent"
      props="{actions: actions, name: 'special', isZenMode: true, isDisabled: false}"
    )
    react-component(
      name="markdown_editor/components/ActionComponent"
      props="{actions: actions, name: 'organizeLinks', isZenMode: true, isDisabled: false}"
    )
    react-component(
      name="markdown_editor/components/ActionComponent"
      props="{actions: actions, name: 'undo', isZenMode: true, isDisabled: !history.hasUndo()}"
    )
    react-component(
      name="markdown_editor/components/ActionComponent"
      props="{actions: actions, name: 'redo', isZenMode: true, isDisabled: !history.hasRedo()}"
    )

    button.toolbar-button.markdown-side-action.active(
      ng-click="zenApi.toggle()")
      i.fa.fa-arrows-alt

    cf-markdown-insert-media-action(actions="actions")

  button.zenmode-drawer__hide.fa.fa-angle-double-right(
    aria-label="Hide Preview"
    ng-click="showPreview(false)"
    ng-show="isPreviewActive")

  button.zenmode-drawer__show.fa.fa-angle-double-left(
    aria-label="Show Preview"
    ng-click="showPreview(true)"
    ng-show="!isPreviewActive")

  .zenmode-editor.markdown-editing-area
    textarea
  .zenmode-preview
    .markdown-preview
      cf-markdown-preview(preview="preview")

  .zenmode-footer
    .zenmode-help
      cf-icon(name="markdown")
      | Use Markdown syntax to format your text.&nbsp;
      a(href ng-click="actions.openHelp()") Help

    cf-markdown-stats.zenmode-info(preview="preview")
    cf-markdown-requirements.zenmode-reqs(
      ng-if="preview.field.validations"
      preview="preview")
