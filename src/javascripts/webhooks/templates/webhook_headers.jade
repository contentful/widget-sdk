.webhook-headers
  .webhook-header(ng-repeat="(name, value) in headers track by name")
    .webhook-header__item
      span.x--jsonlike {{ name }}:&nbsp;
      span.x--jsonlike(ng-hide="isEditing(name)") {{ value }}
      input.cfnext-form__input(
        ng-show="isEditing(name)"
        ng-model="model.existing.value"
        ng-keydown="updateWithEnter($event)")
    .webhook-header__actions
      button.cfnext-btn-link(
        ng-click="update()"
        ng-show="isEditing(name)"
        ng-disabled="!canUpdate()")
        i.fa.fa-check
        |  Update
      button.cfnext-btn-link(
        ng-click="edit(false)"
        ng-show="isEditing(name)")
        i.fa.fa-times
        |  Cancel
      button.cfnext-btn-link(
        ng-click="edit(name)"
        ng-hide="isEditing(name)")
        i.fa.fa-pencil
        |  Edit
      button.cfnext-btn-link(
        ng-click="remove(name)"
        ng-hide="isEditing(name)")
        i.fa.fa-trash
        |  Delete
  .webhook-new-header
    .webhook-new-header__inputs
      input.cfnext-form__input(
        id="webhook-new-header-name"
        placeholder="Name"
        ng-model="model.fresh.name"
        ng-keydown="addWithEnter($event)")
      span.x--jsonlike :&nbsp;
      input.cfnext-form__input(
        placeholder="Value"
        ng-model="model.fresh.value"
        ng-keydown="addWithEnter($event)")
    .webhook-new-header__actions
      button.cfnext-btn-link(ui-command="add")
        i.fa.fa-plus-square
        |  Add
