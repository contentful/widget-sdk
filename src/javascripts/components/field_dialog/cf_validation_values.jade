include ./validation_settings_mixins

.validation-value-list__hint(ng-if="showPredefinedValueWidgetHint")
 | Predefined values work best with dropdown list or radio button list<br>
 | To select either, go to the “Appearance” tab


input.form-control.validation-value-list__add(
  type="text" placeholder="Add a value and hit enter"
  aria-label="Add a value" ng-keydown="onInputKey($event)")

a(cf-knowledge-base-icon
  analytics-event="predefined_values"
  href="https://contentful.zendesk.com/hc/en-us/articles/201551466")

+validation-errors
cf-error-list.form-inline-error(cf-error-messages="valuesController.errorMessages")

.validation-value-list
  i.fa.fa-caret-up
  i.fa.fa-caret-down

  .validation-value-list__scroll-frame
    ul(ui-sortable="sortOptions" ng-model="valueList" aria-label="List of predefined values")
      li.validation-value-list__item(ng-repeat="(index, value) in valueList" index="{{index}}")
        .validation-value-list__value {{value}}
        .validation-value-list__remove(ng-click="remove(index)" aria-label="Remove value")

+error-message-input
