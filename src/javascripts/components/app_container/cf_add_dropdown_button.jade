.app-top-bar__child-action(cf-dropdown space-context="spaceContext"
  ng-hide="permissionController.get('createContentType', 'shouldHide') && permissionController.get('createEntry', 'shouldHide') && permissionController.get('createAsset', 'shouldHide') && permissionController.get('createApiKey', 'shouldHide')")
  a.dropdown-toggle(cf-dropdown-toggle tabindex="0")
    i.fa.fa-plus
  .dropdown-menu.fixed-position.left-aligned(cf-dropdown-menu)
    ul
      li.dropdown-menu-item(
          dropdown-close
          ng-click="entityCreationController.newContentType('addDropdown')"
          ng-hide="permissionController.get('createContentType', 'shouldHide')")
        i.fa.fa-database
        | Content Type
      li.dropdown-menu-item(
          dropdown-close
          ng-click="entityCreationController.newAsset('addDropdown')"
          ng-hide="permissionController.get('createAsset', 'shouldHide')")
        i.fa.fa-paperclip
        | Asset
      li.dropdown-menu-item(
          ng-click="entityCreationController.newApiKey('addDropdown')"
          dropdown-close
          ng-hide="permissionController.get('createApiKey', 'shouldHide')")
        i.fa.fa-random
        | API Key
    ul(ng-hide="permissionController.get('createEntry', 'shouldHide')")
      li.dropdown-menu-item--no-highlight
        i.fa.fa-file
        | Entries
    ul(ng-hide="spaceContext.publishedContentTypes.length === 0 || permissionController.get('createEntry', 'shouldHide')")
      li.dropdown-menu-item(ng-repeat="(index, contentType) in spaceContext.publishedContentTypes track by contentType.getId()"
        ng-click="entityCreationController.newEntry(contentType, 'addDropdown')"
        data-content-type-id="{{contentType.getId()}}"
        dropdown-close)
        | {{contentType.getName()}}
    ul(ng-hide="spaceContext.publishedContentTypes.length > 0 || permissionController.get('createEntry', 'shouldHide')")
      li(dropdown-close ng-hide="permissionController.get('createContentType', 'shouldHide')")
        | (Create and activate a Content Type before creating Entries)
      li(dropdown-close ng-hide="!permissionController.get('createContentType', 'shouldHide')")
        | (No Content Types available. An admin needs to create a Content Type before you can add Entries)
