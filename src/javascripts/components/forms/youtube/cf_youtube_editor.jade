.form-widget__input-row
  input.form-control(
    ng-model="fieldData.value"
    ot-bind-text
    ot-subdoc
    type="text")

  i.youtube-editor__loading.fa.fa-spinner.fa-spin(
    ng-show="isPlayerLoading")
  i.youtube-editor__remove.fa.fa-times-circle(
    ng-click="handleClickOnRemoveSign()"
    ng-show="youtubeUrl && !isPlayerLoading")

.form-widget__help-text(ng-if="helpText") {{helpText}}

.youtube-editor__warning(ng-show="errorMessage")
  i.fa.fa-exclamation-triangle
  | {{errorMessage}}

cf-youtube-player.youtube-player(
  ng-show="youtubeUrl && isPlayerReady"
  on-ready="handlePlayerReady(); playerController.startWatchingYoutubeUrl()"
  on-failure="handlePlayerFailure()"
  on-ready-to-play-video="handlePlayerReadyToPlayVideo()"
  on-failed-to-play-video="handlePlayerFailedToLoadVideo()")
