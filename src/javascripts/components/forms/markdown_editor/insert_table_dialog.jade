.modal-background
  .modal-dialog.insert-link-dialog(cf-center-on=".modal-background")
    header.modal-dialog__header
      h1 Insert table
      .close-button(ng-click="dialog.cancel()")

    form.modal-dialog__content(name="tableForm")
      .cfnext-form__field
        label Number of rows
        input.cfnext-form__input(
          ng-model="model.rows" name="rows" type="number"
          min="2" pattern="[1-9][0-9]*"
          required autocomplete="off"
          cf-focus-on-render="model")
        .cfnext-form__hint Required. Minimal value is 2 (one header row, one value row).

      .cfnext-form__field
        label Number of columns
        input.cfnext-form__input(
          ng-model="model.cols" name="cols" type="number"
          min="1" pattern="[1-9][0-9]*"
          required autocomplete="off")
        .cfnext-form__hint Required. Minimal value is 1.

      .cfnext-form__field
        label Cell width
        input.cfnext-form__input(
          ng-model="model.width" name="width" type="number"
          min="1" pattern="[1-9][0-9]*"
          required autocomplete="off")
        .cfnext-form__hint Required. Initial width of all cells (in characters). Minimal value is 1.

    .modal-dialog__controls
      button.cfnext-btn-primary-action.modal-dialog__controls-confirm(
        ng-click="dialog.confirm(model)"
        ng-disabled="!tableForm.$valid"
        type="button") Insert
      button.cfnext-btn-plain(
        ng-click="dialog.cancel()"
        type="button") Cancel
