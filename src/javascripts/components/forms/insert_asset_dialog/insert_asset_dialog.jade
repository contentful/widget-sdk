.modal-background
  .modal-dialog.insert-asset-dialog(ng-controller="InsertAssetDialogController" ng-keyup="handleKeys($event)" cf-center-on=".modal-background")
    header.modal-dialog__header
      h1 Insert Asset
      .close-button(ng-click="dialog.cancel()")
    .modal-dialog__content
      div.menu-with-buttons(
        cf-view-menu="uiConfig.assetListViews"
        current-view="currentView"
        ng-show="uiConfig")
      .main.search-area
        .l-search-w-autocomplete(
          cf-tokenized-search="currentView.searchTerm"
          search-content-type="assetContentType"
          placeholder="Search for asset"
          cf-on-blur-component="leftSearch($event)")
        .assets.endless-container(cf-endless-container at-bottom="searchController.loadMore()" num-elements="searchController.paginator.page")
          .asset(ng-repeat="asset in assets" ng-click="selectAsset(asset)")
            i.fa.fa-check(ng-show="selection.isSelected(asset)")
            .cf-thumbnail(cf-thumbnail file="spaceContext.localizedField(asset, 'data.fields.file')" size="100")
            .asset-title(title="{{spaceContext.assetTitle(asset)}}") {{spaceContext.assetTitle(asset)}}
    .modal-dialog__controls
      button.cfnext-btn-primary-action.modal-dialog__controls-confirm(
        ng-click="dialog.confirm(selection.getSelected(assets))" type="button")
        | Insert selected
      button.cfnext-btn-plain(
        ng-click="dialog.cancel()" type="button"
        ng-show="dialog.cancelLabel")
        | {{dialog.cancelLabel}}
