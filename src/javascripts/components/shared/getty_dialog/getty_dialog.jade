.modal-background
  .modal-dialog.getty-dialog(ng-controller="GettyDialogController")
    header.modal-dialog__header
      h1 Getty Images
      button.modal-dialog__close(ng-click="dialog.cancel()")

    .getty__dialog-container(ng-show="imageDetail" ng-controller="GettyImageDetailsController")
      include ./getty_image_details

    .getty__dialog-container(ng-show="!imageDetail"
      cf-endless-container at-bottom="loadMore()"
      num-elements="paginator.page" threshold="50")

      .getty__search-area
        include ./getty_search_area
      .getty-error(ng-show="searchError")
        | {{searchError}}
      .getty-no-results(ng-show="noResults")
        | No results were found for this search
      .getty__search-results(ng-show="imageResults.length > 0 && !gettyLoading")
        .getty__search-results-info
          include ./getty_search_results_info
        .getty__search-result(ng-repeat="image in imageResults track by image.id" ng-controller="GettyImageController")
          include ./getty_search_result
        .loading(ng-hide="paginator.atLast()")
      .getty__loading.loading(ng-show="gettyLoading")

