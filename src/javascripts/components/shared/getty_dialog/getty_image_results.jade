.getty-results-bar(getty-results-bar active-when="!fixedResults")

.image-result(ng-repeat="image in imageResults track by image.id")
  .file-preview(cf-file-preview file="image.preview" preview-size="{{image.preview.baseDimSize}}")
    img.thumbnail(ng-src="{{image.thumb.url}}" ng-click="showImageDetail(image.thumb)")
  .getty-metadata(getty-metadata image="image.thumb")

.loading(ng-hide="paginator.atLast()")

