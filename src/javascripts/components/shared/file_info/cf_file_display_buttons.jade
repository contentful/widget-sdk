button.btn.btn--secondary.go-to-asset(type="button" ng-click="entity && !entity.isMissing && $state.go('spaces.detail.assets.detail', { assetId: entity.getId(), addToContext: true })" ng-show="!!(!enableUpload && entity && !entity.isMissing)" tooltip="Open Asset")
  i.fa.fa-share-square-o
| &nbsp;
a.btn.btn--secondary.download-file(type="button" href="{{file.url|assetUrl}}" target="_blank" ng-show="file|isFileReady" tooltip="Download file")
  i.fa.fa-download
| &nbsp;
button.btn.btn--secondary.show-metadata(type="button" ng-click="toggleMeta()" ng-show="file" tooltip="Show file information")
  i.fa.fa-info-circle
| &nbsp;
button.btn.btn--secondary.edit-button(type="button" ng-show="!otDisabled && enableUpload && imageHasLoaded && file|isFileReady" ng-click="editFile()" tooltip="Edit file")
  i.fa.fa-picture-o
| &nbsp;
button.btn.btn--secondary.delete-file(type="button" ng-show="!otDisabled && deleteFile && ((file|isFileReady) || (file|isFileProcessing))" ng-click="deleteFile()" tooltip="Delete file")
  i.fa.fa-trash
| &nbsp;
button.btn.btn--secondary.remove-link(type="button" ng-show="!otDisabled && removeLink" ng-click="removeLink(index, entity)" tooltip="Remove Asset")
  i.fa.fa-close

