.persistent-notification(ng-if="persistentNotification && (message || actionMessage)")
  .persistent-notification__message(
    ng-show="message"
    ng-bind-html="message"
    data-test-id="message")
  button.persistent-notification__action.btn-action(ng-show="actionMessage" ng-click="action()") {{actionMessage}}
  a.persistent-notification__dismiss(ng-click="dismissPersistentNotification()" ng-href="#") x
