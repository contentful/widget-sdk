.app-notification--anchor(ng-show="message")
  .app-notification--slider
    .app-notification(ng-show="message" class="x--{{message.severity}}" ng-click="clear()")
      p(role="alert" aria-hidden="{{!message}}" data-alert-severity="{{message.severity}}")
        | {{message.body}}
      span.app-notification__close
        | (Click to close)
