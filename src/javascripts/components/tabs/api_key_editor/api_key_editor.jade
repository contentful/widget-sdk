.tab-header.editor-configuration
  .tab-header__title
    cf-icon(name="page-api")
    h1(title="{{context.title}}")
      | {{context.title}}
      a(cf-knowledge-base-icon
        tooltip="Learn more about API Keys in the Knowledge Base Pages"
        analytics-event="api_keys"
        href="https://contentful.zendesk.com/hc/en-us/articles/200513178-What-is-an-API-Key-")

  .tab-header__actions
    button.btn.btn--tertiary(type="button"
            ng-click="preferences.toggleAuxPanel()"
            ng-class="{active: preferences.showAuxPanel}"
            tooltip="Toggle additional details"
            tooltip-placement="left")
      | Info


.aux-panel(ng-show="preferences.showAuxPanel")
  header
    span API Key Information
  .entity-info-panel(cf-entity-info-panel="apiKey.getSys()")


.tab-main.tab-workbench
  .ng-form.l-form--split(name="apiKeyForm" submit="save()")
    .l-form-left
      h2.section-title API General Info
      .l-form-row
        label Name
          sup (required)
        .l-form-controls
          .l-field-editor
            input.form-control(type="text" ng-model="apiKey.data.name" required ng-disabled="!editable()" placeholder="iOS iPad Application")
      .l-form-row
        label Description
        .l-form-controls
          .l-field-editor
            textarea.form-control(ng-model="apiKey.data.description" ng-disabled="!editable()" placeholder="This API Key will grant the iOS iPad Application access to the content on Contentful.")
      .l-form-row
        label Space ID
        .l-form-controls
          .l-field-editor
            input.form-control.with-copy-paste-button.space-id(type="text" value="{{spaceContext.space.getId()}}" readonly="readonly")
            a.copy-paste-button.cf-copy-paste(href="#" cf-copy-paste clipboard-sibling-selector=".space-id")
              i.fa.fa-copy
      .l-form-row.device-link
        .l-form-controls
          .l-field-editor(ng-if="apiKey.data.accessToken")
            a(href="http://docs.contentfulcda.apiary.io/#reference/entries/entries-collection/get-all-entries-of-a-space?console=1" target="_blank")
              i.fa.fa-terminal.fa-2x
              |  Try it out on our API Console
          .l-field-editor.u-separator--small(ng-if="isDevice('iOS')")
            a(href="{{mobileAppUrl}}" target="_blank")
              i.fa.fa-apple.fa-2x
              |  Browse entries in the Discovery App
          .l-field-editor.u-separator--small(ng-if="isDevice('any')")
            a(href="https://itunes.apple.com/au/app/contentful-discovery-cms-for/id892840015" target="_blank")
              i.fa.fa-apple.fa-2x
              |  Browse entries in the Discovery App
            |  (For iOS devices only)

    .l-form-right
      h2.section-title API Access Tokens

      .l-form-row
        label Production
        .l-form-controls--with-action
          .l-field-editor(ng-hide="apiKey.data.accessToken")
            input.form-control(type="text" readonly="readonly" value="The token will be automatically generated once you save the existing key.")
          .l-field-editor--with-action(ng-show="apiKey.data.accessToken")
            input.form-control.with-copy-paste-button.access-token(type="text" cf-select-all-input ng-model="apiKey.data.accessToken" readonly="readonly")
            a.copy-paste-button.cf-copy-paste(href="#" cf-copy-paste clipboard-sibling-selector=".access-token")
              i.fa.fa-copy
          .l-field-action(ng-show="apiKey.data.accessToken")
            a.u-locked-action(ng-show="!regenerateProductionToken" href="#" cf-dropdown-toggle="apiKeyEditor.productionToken")
              i.fa.fa-lock
              |  Unlock Access Token Regeneration
            .delete-confirm(cf-dropdown-menu="apiKeyEditor.productionToken" cf-dropdown-position="bottomcenter")
              h2
                i.fa.fa-exclamation-circle
                |  Warning
              p Regenerating the production API access token will break the connection to your apps
              button.btn.btn--danger(type="button" ng-click="regenerateProductionToken=true" cf-dropdown-close) Unlock
              | &nbsp;
              button.btn.btn--secondary(type="button" cf-dropdown-close) Cancel
            a(ng-click="regenerateAccessToken()" ng-show="regenerateProductionToken" href="#")
              i.fa.fa-refresh
              |  Regenerate Access Token

        label.u-separator Preview
        .l-form-controls--with-action
          .l-field-editor(ng-hide="previewApiKey.data.accessToken")
            input.form-control(type="text" readonly="readonly" value="The token will be automatically generated once you save the existing key.")
          .l-field-editor--with-action(ng-show="previewApiKey.data.accessToken")
            input.form-control.with-copy-paste-button.access-token(type="text" cf-select-all-input ng-model="previewApiKey.data.accessToken" readonly="readonly")
            a.copy-paste-button.cf-copy-paste(href="#" cf-copy-paste clipboard-sibling-selector=".access-token")
              i.fa.fa-copy
          .l-field-action(ng-show="previewApiKey.data.accessToken")
            a(ng-click="regenerateAccessToken('preview')" href="#")
              i.fa.fa-refresh
              |  Regenerate Access Token

      h2.section-title.u-separator--large(ng-show="apiKey.data.accessToken") Authentication Code
      .l-form-row.authentication-code(ng-show="apiKey.data.accessToken")
        .l-form-controls
          .l-field-editor
            .tools
              .btn.btn--tertiary.select-box
                select(ng-model="authCodeExample.lang")
                  option(value="http" selected) HTTP (Curl)
                  option(value="javascript") JavaScript
                  option(value="objc") Objective-C
                  option(value="ruby") Ruby
                  option(value="swift") Swift
                i.button-icon-right.fa.fa-caret-down
              label
                input.form-control-look(type="radio" name="codeexampleapi" ng-model="authCodeExample.api" value="cda")
                | Production
              label
                input.form-control-look(type="radio" name="codeexampleapi" ng-model="authCodeExample.api" value="preview")
                | Preview
              a.cf-copy-paste(href="#" cf-copy-paste clipboard-target-selector=".authentication-code .code-example textarea")
                i.fa.fa-copy
                |  Copy to Clipboard

            ng-switch(on="authCodeExample.lang")
              .http.code-example.curl-example(ng-switch-when="http")
                textarea.form-control(readonly="readonly").
                  curl -X GET {{environment.env == 'development' ? 'http' : 'https'}}://{{getApiUrl()}}/spaces/{{spaceContext.space.getId()}}?access_token={{getSelectedAccessToken()}}
              .javascript.code-example(ng-switch-when="javascript")
                textarea.form-control(readonly="readonly" ng-if="authCodeExample.api == 'preview' || environment.env != 'production'").
                  var contentful = require('contentful');
                  var client = contentful.createClient({
                    accessToken: '{{getSelectedAccessToken()}}',
                    host: '{{getApiUrl()}}',
                    space: '{{spaceContext.space.getId()}}'
                  });
                textarea.form-control(readonly="readonly" ng-if="authCodeExample.api == 'cda' && environment.env == 'production'").
                  var contentful = require('contentful');
                  var client = contentful.createClient({
                    accessToken: '{{getSelectedAccessToken()}}',
                    space: '{{spaceContext.space.getId()}}'
                  });
              .objc.code-example(ng-switch-when="objc")
                textarea.form-control(readonly="readonly" ng-if="authCodeExample.api == 'preview' || environment.env != 'production'").
                  CDAConfiguration* config = [CDAConfiguration defaultConfiguration];
                  config.server = @"{{getApiUrl()}}";
                  CDAClient* client = [[CDAClient alloc] initWithSpaceKey:@"{{spaceContext.space.getId()}}" accessToken:@"{{getSelectedAccessToken()}}" config: config];
                textarea.form-control(readonly="readonly" ng-if="authCodeExample.api == 'cda' && environment.env == 'production'").
                  CDAClient* client = [[CDAClient alloc] initWithSpaceKey:@"{{spaceContext.space.getId()}}" accessToken:@"{{getSelectedAccessToken()}}"];
              .ruby.code-example(ng-switch-when="ruby")
                textarea.form-control(readonly="readonly" ng-if="authCodeExample.api == 'preview' || environment.env != 'production'").
                  require 'contentful'
                  client = Contentful::Client.new(
                    access_token: '{{getSelectedAccessToken()}}',
                    api_url: '{{getApiUrl()}}',
                    space: '{{spaceContext.space.getId()}}'
                  )
                textarea.form-control(readonly="readonly" ng-if="authCodeExample.api == 'cda' && environment.env == 'production'").
                  require 'contentful'
                  client = Contentful::Client.new(
                    access_token: '{{getSelectedAccessToken()}}',
                    space: '{{spaceContext.space.getId()}}'
                  )
              .swift.code-example(ng-switch-when="swift")
                textarea.form-control(readonly="readonly" ng-if="authCodeExample.api == 'preview' || environment.env != 'production'").
                  var config = CDAConfiguration.defaultConfiguration()
                  config.server = "{{getApiUrl()}}"
                  var client = CDAClient(spaceKey:"{{spaceContext.space.getId()}}", accessToken:"{{getSelectedAccessToken()}}", configuration:config)
                textarea.form-control(readonly="readonly" ng-if="authCodeExample.api == 'cda' && environment.env == 'production'").
                  var client = CDAClient(spaceKey:"{{spaceContext.space.getId()}}", accessToken:"{{getSelectedAccessToken()}}")

.tab-actions
  .button-set
    button.btn.btn--secondary.delete(type="button" ng-show="apiKey.getId()" cf-dropdown-toggle="apiKeyEditor.delete") Delete
    .delete-confirm(cf-dropdown-menu="apiKeyEditor.delete" cf-dropdown-position="topcenter")
      p You are about to delete {{context.title}}
      button.btn.btn--danger(type="button" ng-click="delete()" cf-dropdown-close) Delete
      button.btn.btn--secondary(type="button" cf-dropdown-close) Don't Delete
    button.btn.btn--primary.save(type="submit"
                 tooltip="Save this API key"
                 ng-click="save()"
                 cf-when-disabled="permissionController.entityActions.createApiKey"
                 ng-disabled="apiKeyForm.$invalid || permissionController.get('createApiKey', 'shouldDisable')")
      | Save
  .rest-save-status
    | Hit Save to save changes to this API Key.
