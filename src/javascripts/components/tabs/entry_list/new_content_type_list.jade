.modal-background.new-content-type-dialog
  .modal-dialog(cf-center-on=".modal-background")
    header.modal-dialog__header
      h1 Choose the type of Entry
      .close-button(ng-click="dialog.cancel()")
    .modal-dialog__content
      ul.u-list.block-list
        li(ng-repeat="contentType in spaceContext.publishedContentTypes track by contentType.getId()"
                 ng-click="dialog.confirm() && entityCreationController.newEntry(contentType, 'frameButton')")
          | {{contentType.getName()}}

