.user-list
  h1 Users

.tab-main
  .without-left-nav
    table.result-list.main-results.main-header
      thead
        tr
          th.cell-user User
          th.cell-roles User roles
          th.cell-admin Is admin?
    .main-results-wrapper
      table.result-list.main-results
        tbody
          tr(ng-repeat="user in users track by user.id" ui-sref="{{ user.id }}")
            td.cell-user
              a.entity-list-link
                img.result-list-thumbnail.form-control(ng-src="{{ user.avatar }}" width="32" height="32")
                |  {{ user.name }}
            td.cell-roles
              a.entity-list-link {{ user.roles }}
            td.cell-admin
              a.entity-list-link
                i.fa(ng-class="user.isAdmin ? 'fa-check' : 'fa-times'")
                span(ng-show="user.isAdmin")  Yes
                span(ng-hide="user.isAdmin")  No
