.modal-background
  form.modal-dialog.edit-content-type-metadata__dialog(
    novalidate
    ng-controller="ContentTypeMetadataController"
    name="newContentTypeForm"
    cf-on-submit="newContentTypeForm.$valid && dialog.confirm()")
    header.modal-dialog__header
      h1 {{dialog.title}}
      button.modal-dialog__close(ng-click="dialog.cancel()")
    .modal-dialog__content
      .cfnext-form__field
        label
          | Name
          span.cfnext-form__label-hint(cf-field-invalid-class="contentTypeName")
           | required
        input.cfnext-form__input--full-size(
          type="text"
          name="contentTypeName"
          placeholder="For example Product, Blog Post, Author"
          ng-model="contentTypeMetadata.name"
          required maxlength="50"
          cf-focus-on-render)
      .cfnext-form__field(ng-if="contentTypeIsNew")
        label
          | API identifier
          span.cfnext-form__label-hint
           | generated from name
        input.cfnext-form__input--full-size(
          type="text"
          name="contentTypeId"
          ng-model="contentTypeMetadata.id"
          required)
        div.cfnext-form__field-error(cf-field-error-for="contentTypeId")
      .cfnext-form__field
        label
          | Description
          span.cfnext-form__label-hint
           | in less than 500 characters
        textarea.cfnext-form__input--full-size(
          maxlength="500"
          name="contentTypeDescription"
          ng-model="contentTypeMetadata.description")
        .cfnext-form__field-error(cf-field-error-for="contentTypeDescription")

    .modal-dialog__controls
      button.cfnext-btn-primary-action(cf-form-submit)
        | {{dialog.confirmLabel}}
      button.cfnext-btn-secondary-action(type="button" ng-click="dialog.cancel()")
        | Cancel
