ul(cf-ui-sortable ng-model="contentType.data.fields")
  li.content-type-fields__item(
    ng-controller="FieldSettingsEditorController"
    ng-repeat="(index, field) in contentType.data.fields track by field.id"
    ng-hide="field.disabled && !preferences.showDisabledFields"
  )

    .ct-field__name
      |{{field | displayedFieldName}}
    .ct-field__type
      | {{field.type}}
    a.ct-field__edit(ng-click="openSettingsDialog()")
      | Settings
    .ct-field__drag-handle(data-drag-handle)
      i.fa.fa-bars
