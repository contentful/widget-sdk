.tab-content(ng-repeat="tab in spaceContext.tabList.items"
             ng-show="spaceContext.space && !spaceContext.space.isHibernated() && tab.active()"
             ng-class="{'with-tab-bar': !hideTabBar()}"
             ng-switch="tab.viewType")
  .space-settings(cf-space-settings ng-switch-when="space-settings")
  .entry-list.entity-list(cf-entry-list ng-switch-when="entry-list")
  .asset-list.entity-list(cf-asset-list ng-switch-when="asset-list")
  .content-type-list.entity-list(cf-content-type-list ng-switch-when="content-type-list")
  .entry-editor.entity-editor.with-tab-actions(cf-entry-editor ng-switch-when="entry-editor"
    ot-doc-for="tab.params.entry"
    cf-validate="tab.params.entry.data" with-schema="entrySchema"
    ng-class="{'with-aux-panel': preferences.showAuxPanel}"
    ot-doc-presence)
  .asset-editor.entity-editor.with-tab-actions(cf-asset-editor ng-switch-when="asset-editor"
    ot-doc-for="tab.params.asset"
    cf-validate="tab.params.asset.data" with-schema="assetSchema"
    ng-class="{'with-aux-panel': preferences.showAuxPanel}"
    ot-doc-presence)
  .content-type-editor.entity-editor.with-tab-actions(cf-content-type-editor ng-switch-when="content-type-editor"
    cf-validate="tab.params.contentType.data"
    ng-class="{'with-aux-panel': preferences.showAuxPanel}")
  .editing-interface-editor.with-tab-actions(cf-editing-interface-editor ng-switch-when="editing-interface-editor")
  .content-model.entity-list(cf-content-model ng-switch-when="content-model")
  .api-home(cf-api-home ng-switch-when="api-home")
  .api-key-list.entity-list(cf-api-key-list ng-switch-when="api-key-list")
  .api-key-editor.entity-editor.with-tab-actions(cf-api-key-editor ng-switch-when="api-key-editor"
    ng-class="{'with-aux-panel': preferences.showAuxPanel}")
  div(ng-switch-default)
    | Unhandled case: viewType = {{spaceContext.tabList.currentViewType()}}

