nav.nav-bar(ng-class="{'with-persistent-notification': persistentNotification}")
  .logo(ng-click="logoClicked()")
    .cf-logo(cf-custom-logo)
  ul(ng-show="!locationInAccount && spaces.length > 0 && spaceContext.space && !spaceContext.space.isHibernated()")
    li.add-dropdown-button(cf-add-dropdown-button
      space-context="spaceContext"
      ng-hide="permissionController.get('createContentType', 'shouldHide') && permissionController.get('createEntry', 'shouldHide') && permissionController.get('createAsset', 'shouldHide') && permissionController.get('createApiKey', 'shouldHide')")
    li(ng-class="{section: spaceContext.tabList.currentSection() == 'contentTypes',\
                  'section-index': spaceContext.tabList.currentViewType() == 'content-type-list'}"
        ng-click="goToView('content-type-list')"
        ng-hide="permissionController.get('updateContentType', 'shouldHide')"
        data-view-type="content-type-list"
        tooltip="Content Model"
        tooltip-placement="bottom"
        tabindex="0")
      i.fa.fa-database
      span Content Model
    li(ng-class="{section: spaceContext.tabList.currentSection() == 'entries',\
                  'section-index': spaceContext.tabList.currentViewType() == 'entry-list'}"
        ng-hide="permissionController.get('readEntry', 'shouldHide')"
        ng-click="goToView('entry-list')"
        data-view-type="entry-list"
        tooltip="Entries"
        tooltip-placement="bottom"
        tabindex="0")
      i.fa.fa-file
      span Entries
    li(ng-class="{section: spaceContext.tabList.currentSection() == 'assets',\
                 'section-index': spaceContext.tabList.currentViewType() == 'asset-list'}"
        ng-click="goToView('asset-list')"
        ng-hide="permissionController.get('readAsset', 'shouldHide')"
        data-view-type="asset-list"
        tooltip="Assets"
        tooltip-placement="bottom"
        tabindex="0")
      i.fa.fa-paperclip
      span Assets
    li(ng-class="{section: spaceContext.tabList.currentSection() == 'apiHome',\
                   'section-index': spaceContext.tabList.currentViewType() == 'api-home'}"
        ng-click="goToView('api-home')"
        ng-hide="permissionController.get('readApiKey', 'shouldHide')"
        data-view-type="api-home"
        tooltip="API"
        tooltip-placement="bottom"
        tabindex="0")
      i.fa.fa-random
      span API
    li(ng-class="{section: spaceContext.tabList.currentSection() == 'spaceSettings',\
                  'section-index': spaceContext.tabList.currentSection() == 'spaceSettings'}"
        ng-click="goToView('space-settings')"
        ng-hide="permissionController.get('updateSettings', 'shouldHide')"
        data-view-type="space-settings"
        tooltip="Space Settings"
        tooltip-placement="bottom"
        tabindex="0")
      i.fa.fa-gear
      span Space Settings

nav.tab-list(cf-tab-list ng-show="spaceContext.space && !spaceContext.space.isHibernated() && !locationInAccount" ng-class="{hidden: hideTabBar()}")

div(cf-tab-content)

.advice(ng-show="spaceContext.space && spaceContext.space.isHibernated()")
  i.fa.fa-cloud-upload.giant-icon
  header.advice-title Hold on! We're bringing your space back
  div.advice-description.top-advice
    p You haven't been here for a while, so your Space slipped into hibernation.
    p Don't worry, all your content is safe and shall be available for use in a few moments.
  div.advice-description
    p Refresh your browser window in a minute or
    a.knowledge-base-link(target="_blank" href="https://contentful.zendesk.com/hc/en-us/articles/201316206")
      Learn more about hibernation in our Help Center
