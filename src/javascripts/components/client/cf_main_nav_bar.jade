nav.nav-bar(ng-class="{'with-persistent-notification': persistentNotification}")
  ul.nav-bar__list(ng-show="spaceContext.space && !spaceContext.space.isHibernated()")
    li.app-top-bar__action.nav-bar__list-item(
      ng-if="canNavigateTo.spaceHome")
      a.nav-bar__link(
        ng-class="{'is-active': $state.is('spaces.detail.home')}"
        ui-sref="spaces.detail.home"
        data-view-type="space_home"
        tabindex="0")
        cf-icon(name="nav-home")
        span.nav-bar__list-label Space home
    li.app-top-bar__action.nav-bar__list-item(
      ng-if="canNavigateTo.contentType")
      a.nav-bar__link(
          ng-class="{'is-active': $state.includes('spaces.detail.content_types')}"
          ui-sref="spaces.detail.content_types.list"
          data-view-type="content-type-list"
          tabindex="0")
        cf-icon(name="nav-ct")
        span.nav-bar__list-label Content model
    li.app-top-bar__action.nav-bar__list-item(
      ng-if="canNavigateTo.entry")
      a.nav-bar__link(
          ng-class="{'is-active': $state.includes('spaces.detail.entries')}"
          ui-sref="spaces.detail.entries.list"
          data-view-type="entry-list"
          tabindex="0")
        cf-icon(name="nav-entries")
        span.nav-bar__list-label Content
    li.app-top-bar__action.nav-bar__list-item(
      ng-if="canNavigateTo.asset")
      a.nav-bar__link(
          ng-class="{'is-active': $state.includes('spaces.detail.assets')}"
          ui-sref="spaces.detail.assets.list"
          data-view-type="asset-list"
          tabindex="0")
        cf-icon(name="nav-media")
        span.nav-bar__list-label Media
    li.app-top-bar__action.nav-bar__list-item(
      ng-if="canNavigateTo.apiKey")
      a.nav-bar__link(
          ng-class="{'is-active': $state.includes('spaces.detail.api')}"
          ui-sref="spaces.detail.api.home"
          data-view-type="api-home"
          tabindex="0")
        cf-icon(name="nav-api")
        span.nav-bar__list-label APIs
    li.app-top-bar__action.nav-bar__list-item(
      ng-if="canNavigateTo.settings")
      a.nav-bar__link.app-top-bar__menu-trigger(
        role="button"
        data-view-type="space-settings"
        cf-context-menu-trigger
        data-test-id="settings-menu-trigger"
        ng-class="{'is-active': $state.includes('spaces.detail.settings')}")
        cf-icon(name="nav-settings")
        span.nav-bar__list-label Settings
        cf-icon.icon-dd-arrow-down.pull-right(name="dd-arrow-down")
      .context-menu.x--top-bar(
        role="menu" cf-context-menu
        data-test-id="settings-menu")
        ul.context-menu__items
          a.context-menu__item(
            role="menuitem"
            ng-class="{'selected': $state.includes('spaces.detail.settings.space')}"
            ui-sref="spaces.detail.settings.space")
            | Space
          a.context-menu__item(
            role="menuitem"
            ng-class="{'selected': $state.includes('spaces.detail.settings.locales')}"
            ui-sref="spaces.detail.settings.locales.list")
            | Locales
          a.context-menu__item(
            role="menuitem"
            ng-class="{'selected': $state.includes('spaces.detail.settings.users')}"
            ui-sref="spaces.detail.settings.users.list")
            | Users
          a.context-menu__item(
            role="menuitem"
            ng-class="{'selected': $state.includes('spaces.detail.settings.roles')}"
            ui-sref="spaces.detail.settings.roles.list")
            | Roles
          a.context-menu__item(
            role="menuitem"
            ng-class="{'selected': $state.includes('spaces.detail.settings.webhooks')}"
            ui-sref="spaces.detail.settings.webhooks.list")
            | Webhooks
          a.context-menu__item(
            role="menuitem"
            ng-class="{'selected': $state.includes('spaces.detail.settings.content_preview')}"
            ui-sref="spaces.detail.settings.content_preview.list")
            | Content preview
