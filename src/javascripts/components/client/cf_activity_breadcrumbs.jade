.breadcrumbs.activity(ng-hide="activity.empty")
  | (opened from&nbsp;
  ul
    li.breadcrumb(ng-repeat="entity in activity.context")
      a(tooltip="{{title(entity).length > 50 ? title(entity) : ''}}" tooltip-placement="bottom" ui-sref="{{sref(entity)}}")
        | {{title(entity) | truncate: 50 }}{{entity.hasUnpublishedChanges() ? '*' : ''}}
      span.breadcrumb-divider.fa.fa-angle-right(ng-if="!$last")
  | )
