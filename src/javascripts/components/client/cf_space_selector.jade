.space-selector.app-top-bar__child-action.app-top-bar--separator(cf-dropdown ng-show="organizations && organizations.length > 0" ng-hide="spaces.length == 0 && !canCreateSpaceInAnyOrg()")
  a(cf-dropdown-toggle ng-click="clickedSpaceSwitcher()" tabindex="0")
    i.button-icon-right.fa.fa-caret-down
    span.space-selector__name.u-truncate(ng-bind="spaceContext.space.data.name || 'Spaces'")
  .space-selector__dropdown.cfnext-dropdown.fixed-position.left-aligned(cf-dropdown-menu)
    ul.cfnext-dropdown__list
      li.cfnext-dropdown__item--no-highlight(ng-repeat="(orgId, org) in spacesByOrg" ng-class="{'has-no-action': canSelectOrg(orgId)}")
        span.u-truncate {{getOrgName(orgId)}}
        ul.cfnext-dropdown__inner-list
          li.cfnext-dropdown__item(ng-repeat="space in org track by space.getId()"
              cf-click-local="selectSpace(space) && toggleDropdown()"
              ng-class="{hibernated: space.isHibernated()}" ng-disabled="!space.isHibernated()"
              tooltip-container=".project" tooltip-placement="left"
              tooltip="This space entered hibernation due to lack of use. It will be back online soon.")
            span.u-truncate {{space.data.name}}
            i.fa.fa-circle(ng-show="space.isHibernated()")
    ul.cfnext-dropdown__list
      li.cfnext-dropdown__item(ng-show="permissionController.canCreateSpace()" ng-click="showCreateSpaceDialog()" ng-class="{'top-separator': spaces.length > 0}" dropdown-close)
        | + Create Space
