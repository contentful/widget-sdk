.account-dropdown.app-top-bar__child.app-top-bar--left-separator
  a.app-top-bar__menu-trigger(
    role="button"
    cf-context-menu-trigger
    tabindex="0" data-test-id="account-menu-trigger")
    img.account-dropdown__avatar(ng-src="{{user.avatarUrl}}")
    span.account-dropdown__name.u-truncate {{user.firstName}}
    cf-icon.icon-dd-arrow-down.pull-right(name="dd-arrow-down")
  .context-menu.x--top-bar.x--arrow-right(
    role="menu" cf-context-menu="bottom-right"
    aria-label="Account Menu" data-test-id="account-menu")
    ul.context-menu__items
      li(role="menuitem"
        data-test-id="account-menu-item-profile"
        ui-sref="account.profile.user")
        | User profile
      li(role="menuitem"
        data-test-id="account-menu-item-organizations"
        ui-sref="account.organizations.subscription({orgId: orgId})"
        ng-show="canGoToOrganizations")
        | Organizations &amp; billing
      li(role="menuitem"
        data-test-id="account-menu-item-intercom"
        ng-click="openIntercom()"
        ng-if="canShowIntercomLink && isIntercomLoaded()")
        | Talk to us
      li(role="menuitem"
        data-test-id="account-menu-item-support"
        ng-click="openSupport()")
        | Get support
      li(role="menuitem"
        data-test-id="account-menu-item-logout"
        ng-click="logout()")
        | Log out
