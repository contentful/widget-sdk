       url("/app/1e9892c0-6927-4412-9874-1b82801ba47a.woff") format("woff");
  font-weight:  400;
  font-style: normal;
}

@font-face{
  font-family: "Avenir Next W01";
  src: url("/app/7377dbe6-f11a-4a05-b33c-bc8ce1f60f84.woff2") format("woff2"),
       url("/app/92b66dbd-4201-4ac2-a605-4d4ffc8705cc.woff") format("woff");
