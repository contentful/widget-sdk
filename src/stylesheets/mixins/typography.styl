}

$sans-font()
  font-family: "Avenir Next W01", Helvetica, sans-serif

$monospace-font()
  font-family: "Menlo", "Andale mono", monospace

$establish-baseline()
  font-size: $base-font-size
  line-height: $base-line-height

$rhythm(n = 1)
  return n * unit($base-line-height / $base-font-size, em);
