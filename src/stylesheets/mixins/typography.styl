@font-face{
  font-family:"Avenir Next W01";
  src: url("/app/aad99a1f-7917-4dd6-bbb5-b07cedbff64f.woff2") format("woff2"),
       url("/app/91b50bbb-9aa1-4d54-9159-ec6f19d14a7c.woff") format("woff");
