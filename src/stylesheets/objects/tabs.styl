/*
Tabs

Markup:
ul.tab-list
  li(role="tab") First
  li(role="tab" aria-selected="true") Second
  li(role="tab") Third


Styleguide tabs
*/
$tab-marker($color)
  &:before
    content: ""
    position: absolute
    background: $color
    bottom: 0
    left: 0
    right: 0
    height: 4px

$tab-space = (10 / 14) * 1rem
$tab()
  white-space: nowrap
  position: relative
  line-height: 4em
  cursor: pointer
  margin: 0 (4*$tab-space) 0 0;
  &:last-child
    margin-right: 0
  padding: 0 $tab-space

  &:hover
    $tab-marker($cfnext-light-blue)
  &[aria-selected=true]
    font-weight: bold
    $tab-marker($cfnext-blue)


$tab-list()
  display: flex;
  [role=tab]
    $tab()

.tab-list
  $tab-list()


// TODO move this somewhere more fitting
[aria-hidden=true]
  display: none;
