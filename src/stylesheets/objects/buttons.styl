/*
Buttons

Styleguide 4.0
*/
.transparent-button-layer
  background-color: transparent
  position: absolute
  $layer('buttonOverlay')
  margin: 0 !important

@import './buttons-deprecated.styl'

/*
New Buttons

Styleguide 4.1
*/

// This function generates the padding for the pressed state of a button
$pressed-vert-padding($value, $modifiers = {})
  $top = 0.1
  $bottom = 0.1
  padding-top: $value + ($modifiers.top || $top)
  padding-bottom: $value - ($modifiers.bottom || $bottom)


// vertical padding for regular button
$cfnext-button-vert-padding = 0.6rem

$cfnext-button($color = false, $border-color = false)
  position: relative
  padding: $cfnext-button-vert-padding 1.5rem
  cursor: pointer
  text-align: center
  font-size: 0.9rem
  font-weight: bold
  color: white
  background-color: $color
  border-radius: 2px
  border-width: 1px
  border-style: solid
  if $border-color
    border-color: $border-color
  else
    border-color: $color
  &:disabled,
  &[aria-disabled=true],
  &[disabled]
    opacity: 0.4
  &:active
    $pressed-vert-padding($cfnext-button-vert-padding)
  cf-icon
    display: block
    float: left
    position: relative
    margin-right: 0.5em
    margin-top: -1px

$cfnext-button--with-icon()
  padding-bottom: 0.4rem
  &:active
    $pressed-vert-padding($cfnext-button-vert-padding, {bottom: 0.3})

$cfnext-button-large()
  $cfnext-button-large-vert-padding = 1rem
  font-size: 1.15rem
  padding: $cfnext-button-large-vert-padding 2.5rem
  &:active
    $pressed-vert-padding($cfnext-button-large-vert-padding, {bottom: 0.05})

$cfnext-button--large-popout-icon()
  $cfnext-button-large()
  padding-left: 4.5rem
  cf-icon
    position: absolute
    left: 0.5rem
    top: -0.5rem

/*
Action Button

This button should be used for actions which are important, but not necessarily
the most important action in the current view

Markup:
p
  button(class="cfnext-btn-action{{modifier_class}}") Action
p
  button(class="cfnext-btn-action{{modifier_class}}" disabled) Action

--with-icon - With an icon on the left of the text
--large - Large variation
--large-popout-icon - Large variation with an popping out of the button on the left side

Styleguide 4.1.1
*/
.cfnext-btn-action
  $cfnext-button($cfnext-blue)

.cfnext-btn-action--with-icon
  $cfnext-button($cfnext-blue)
  $cfnext-button--with-icon()

.cfnext-btn-action--large
  $cfnext-button($cfnext-blue)
  $cfnext-button-large()

.cfnext-btn-action--large-popout-icon
  $cfnext-button($cfnext-blue)
  $cfnext-button--large-popout-icon()

/*
Primary Action Button

Used for the most important action in a given context

Markup:
p
  button(class="cfnext-btn-primary-action{{modifier_class}}") Action
p
  button(class="cfnext-btn-primary-action{{modifier_class}}" disabled) Action

--large - Large variation

Styleguide 4.1.2
*/
.cfnext-btn-primary-action
  $cfnext-button($cfnext-green)

.cfnext-btn-primary-action--large
  $cfnext-button($cfnext-green)
  $cfnext-button-large()

/*
Secondary Action Button

Used for actions that should complement primary actions or visually less
important actions

Markup:
p
  button(class="cfnext-btn-secondary-action{{modifier_class}}") Action
p
  button(class="cfnext-btn-secondary-action{{modifier_class}}" disabled) Action

--large - Large variation

Styleguide 4.1.3
*/
.cfnext-btn-secondary-action
  $cfnext-button(white, $border-color: $cfnext-blue)
  color: $cfnext-blue

.cfnext-btn-secondary-action--large
  $cfnext-button(white, $border-color: $cfnext-blue)
  $cfnext-button-large()
  color: $cfnext-blue

/**
 * Caution button
 *
 * Markup:
 * button.cfnext-btn-caution
 *   | Be Careful!
 * button.cfnext-btn-caution(disabled)
 *   | Be Careful!
 *
 * Styleguide 4.1.4
 */
.cfnext-btn-caution
  $cfnext-button($color: $cfnext-red)


/**
 * Plain Action Button
 *
 * Use inline
 *
 * Markup:
 * p
 *   | Click here
 *   button.cfnext-btn-plain Action Button 
 *   | More text
 *   a.cfnext-btn-plain Action link 
 * p
 *   button.cfnext-btn-primary-action
 *     | One
 *   button.cfnext-btn-plain-block
 *     | Two
 *   button.cfnext-btn-action
 *     | Three
 *
 * Styleguide 4.1.5
 */
 $cfnext-btn-plain()
  font-size: inherit
  display: inline-block;
  vertical-align: baseline
  padding: 0.1em 0.3em
  margin: 0
  border: 0
  background: none
  cursor: pointer
  color: $cfnext-blue

.cfnext-btn-plain
  $cfnext-btn-plain()
  a&
    padding: 0
  a&:hover
    color: $cfnext-blue

.cfnext-btn-plain-block
  $cfnext-button(transparent)
  color: $cfnext-blue;
