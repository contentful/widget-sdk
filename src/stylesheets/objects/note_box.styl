/*
Note box with icon

Markup:
.note-box.note-box--blue.x--with-icon
  cf-icon(name="info")
  p Here is some info next to an icon!

Styleguide 21.3
*/


$note-box()
  clear: both
  overflow: hidden
  position: relative
  margin: $rhythm(1)
  padding: $rhythm(1)
  > *:first-child
    padding-top: 0
    margin-top: 0
  > p:last-of-type
    margin-bottom: 0
    padding-bottom: 0
  h2
    text-transform: none
    margin-bottom: $rhythm(0.4)
  .note-box-dismissal
    position: absolute
    top: 10px
    right: 15px

.note-box
  $note-box()

  &.x--with-icon
    display: flex
    cf-icon
      margin-right: 10px

.note-box-small
  $note-box()
  margin: $rhythm(1) $rhythm(0)
  padding: $rhythm(0.66) 2ex

$note-box--gold()
  border-radius: 4px
  background-color: lighten($gold, 70%)
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1)

$note-box--blue()
  background-color: $colors.lightest-blue
  border: 1px solid $colors.light-blue

.note-box--gold
  $note-box--gold()

.note-box--blue
  $note-box--blue()

.note-box--centered
  text-align: center
