.note-box
  clear: both
  overflow: hidden
  margin: 3rem 5%
  padding: 2rem
  padding-bottom: 1rem
  border-radius: 4px
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1)
  background-color: lighten($gold, 70%)
  h2
    text-transform: none
    margin-bottom: 1.4rem
  .note-box-dismissal
    float: right
    margin-top: 0.5rem


