// Temporary override for gatekeeper usage
input.btn--input
  padding: 0.6em 1em

.transparent-button
  background: none
  border: none
  cursor: pointer
  padding: 0
  margin: 0
.transparent-button[disabled]
  cursor: auto

.toggle-collapse
  display: inline-block
  color: inherit
  cursor: pointer
  transition: transform 0.1s ease-in-out
  &.on-right
    transform: rotate(180deg)
  &.open
    transform: rotate(90deg)
  &:hover
    color: inherit

.copy-paste-button
  position: absolute
  display: block
  right: 0px
  top: 0px
  bottom: 0px
  width: 33px
  line-height: 30px
  padding: 0
  padding-left: 4px
  text-align: center
  vertical-align: middle
  box-shadow: none
  .fa-copy
    font-size: 15px

.toggle-button-set
  $display-flex

.toggle-button
  flex-grow: 1
  border-radius: 0
  &:first-child
    border-radius: 3px 0 0 3px
  &:last-child
    border-radius: 0 3px 3px 0
  cursor: pointer
  margin: 0
  &:active,
  &.active
    top: 0
    box-shadow: 0 2px 2px darken($gray-lightest, 10%) inset
    cursor: default
  &:focus
    outline: none !important

// An Icon inside a button
$button-icon()
  position: relative
  right: 2px

.button-icon
  $button-icon()
  &.fa-caret-down
    font-size: 13px
  &.fa-plus
    font-size: 0.9em
  &.fa-angle-right
    font-size: 0.9em

.button-icon-right
  $button-icon()
  float: right
  top: 2px
  right: 0
  left: 3px

// Tweaks for specific icons
.button-icon-right
  &.fa-caret-down
    top: 3px
