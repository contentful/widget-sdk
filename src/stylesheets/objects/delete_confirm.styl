.delete-confirm
  position: absolute
  $layer('floatingDialog')
  max-width: 400px
  min-width: 300px
  padding: 20px 30px
  background-color: white
  text-align: center
  border-radius: 3px
  font-size: $base-font-size
  box-shadow: 0 1px 1px $gray-dark, 1px 0 1px $gray-dark
  border-style: solid
  border-color: $gray
  border-top-width: 1px
  border-left-width: 1px
  > h2,
  > p
    margin-bottom: 20px

.delete-confirm.bottom-caret:before,
.delete-confirm.top-caret:before
  font-size: 12px

.delete-confirm.bottom-caret:before
  bottom: -11px
  text-shadow: 0 1px 1px $gray-dark

.delete-confirm.top-caret:before
  top: -11px
  text-shadow: 0 -1px 1px $gray-dark

.delete-confirm.no-caret.bottom-caret:before
  display: none
