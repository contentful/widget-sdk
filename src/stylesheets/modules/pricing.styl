.pricing-heading
  font-size: 17px
  font-weight: bold
  line-height: 20px
  margin-top: 12px
  margin-bottom: 20px

.pricing-tile
  padding: 45px 20px 20px
  text-align: center
  border: 1px solid $colors.element-mid
  box-shadow: 0 1px 4px 0 rgba(0,0,0,0.08)

.pricing-tiles-list
  display: flex
  flex-wrap: wrap
  .pricing-tile
    margin 0 20px 20px 0
    width: 220px
    height: 220px

.pricing-plan
  position: relative
.pricing-plan__bar
  position: absolute
  top: -1px
  left: -1px
  right: -1px
  height: 15px
  border: 1px solid $colors.element-mid
  background-color: $colors.element-light
