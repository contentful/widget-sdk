.pricing-heading
  font-size: 17px
  font-weight: bold
  line-height: 20px
  margin-top: 12px
  margin-bottom: 20px

.pricing-tile
  width: 100%
  padding: 30px
  text-align: center
  border: 1px solid $colors.element-mid
  box-shadow: 0 1px 4px 0 rgba(0,0,0,0.08)

.pricing-tiles-list
  display: flex

.pricing-plan
  position: relative
  &:before
    content: ' '
    position: absolute
    width: 100%
    top: -1px
    left: -1px
    height: 15px
    border: 1px solid
  &.pricing-plan--team:before
    background-color: $colors.green-mid
    border-color: darken($colors.green-mid, 10%);
