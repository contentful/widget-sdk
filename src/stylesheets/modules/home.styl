$home-width = 820px

.home
  $stretch(0, 0, 0, 0)
  overflow-y: auto
  overflow-x: hidden

  &__container-practitioner
    background: url('/app/images/practitioner-home-bg.png') no-repeat
    background-size: cover
    $stretch(0, 0, 0, 0)
    overflow-y: auto
    overflow-x: hidden

  &__container
    background-image: url('/app/images/home-bg.png')
    background-size: 1280px auto
    background-repeat: repeat-x

    &-read-only
      background: $colors.white
      height: 100%
      padding: 240px 0
      text-align: center

      & > div
        width: 450px

  &__content
    position: relative
    padding-top: $rhythm(1)
    width: $home-width
    margin: 0 auto

    &-title
      font-size: 27px
      font-weight: 700
      margin-bottom: 55px

    &-body
      font-size: 14px
      line-height: 1.5
      color: $colors.text-mid

      & > p
        margin-bottom: 25px

  &__welcome-image
    position: absolute
    bottom: 0
    right: 30px

  &-section
    width: $home-width
    position: relative
    background-color: white
    border: 1px solid $colors.element-mid
    box-shadow: 0px 1px 2px 0px hsla(black, 0.1)
    display: block
    margin: 0 auto 16px auto
    padding: 24px
    &__heading
      margin-top: 0
      line-height: 1.5em
    &__description
      color: $colors.text-mid
      line-height: 1.5em
      margin: 20px 0
    &__body
      button
        margin-right: 24px
    &.x--onboarding-steps
      padding: 0
      .home-section__heading
        padding: 24px 24px 0 24px
      .home-section__description
        padding: 0 24px
  &-links
    display: flex
    &__col
      width: 50%
      a
        display: block
        line-height: 2em

  &__examples
    display: flex

  &-example
    display: flex
    flex-direction: column
    justify-content: space-between
    width: 22%
    margin-right: 2%
    border: 1px solid $colors.element-mid
    box-shadow: 0px 1px 2px 0px hsla(black, 0.1)
    padding: 14px 10px
    &__header
      color: $colors.text-dark
      margin-top: 0
    &__description
      color: $colors.text-mid
    &__dot
      border: 1px solid $colors.element-mid
      height: 12px
      width: 12px
      float: left
      margin: 0 7px 10px 0
    &__link
      align-self: flex-end
      width: 100%
    &:nth-child(4n+1)
      .home-example__dot
        background-color: $colors.green-light
    &:nth-child(4n+2)
      .home-example__dot
        background-color: $colors.orange-light
    &:nth-child(4n+3)
      .home-example__dot
        background-color: $colors.blue-light
    &:nth-child(4n)
      .home-example__dot
        background-color: $colors.red-light

.onboarding-step
  padding: 24px
  border-top: 1px solid $colors.element-mid
  display: flex
  align-items: center
  &.x--disabled
    opacity: 0.6
  &__icon
    min-width: 40px
    max-width: 40px
  &__text
    flex-grow: 1
  &__heading
    margin-top: 0
  &__cta
    text-align: right
    min-width: 210px
    cf-icon
      margin-right: 4px
  &__completed
    font-weight: bold
    color: $colors.green-darkest
    display: flex
    justify-content: flex-end
  &__link
    margin-top: 6px
    a
      color: $colors.text-light
      text-decoration: underline
.widget-container
  width: 100%
  height 100%
  display: flex
  align-content: flex-start
  flex-wrap: wrap
  padding: 20px
  &__row
    width: 100%
  &__row-order-1
    order: 1
  &__row-order-2
    order: 2
  &__row-order-3
    order: 3
  &__row-order-4
    order: 4
.tab-list.x--home
  border: 1px solid transparent
  border-bottom: 1px solid $colors.element-mid
  margin: 0 1px 16px 1px
  width: $home-width - 2px
  transition: background-color 0.2s ease-in-out
  z-index: 1
  &.fixed
    background-color: white

.greeting-widget
  justify-content: center
  display: flex
  flex-wrap: wrap
  margin-top: 55px
  &__header
    color: $colors.text-dark
    font-family: "Avenir Next W01"
    font-size: 35px
    line-height: 44px
    text-align: center
    width: 100%
    margin: 5px
  &__copy
    color: $colors.text-dark
    font-family: "Avenir Next W01"
    font-size: 16px
    line-height: 24px
    text-align: center
    width: 100%
    margin: 5px
  &__space-name
    font-weight: 600
  &__italic
    font-style: italic
.concept-video-widget
  padding: 0
  width: 939px
  margin: auto
  margin-top: 64px
  &__header
    font-size: 16px
    border-bottom: 1px solid $colors.element-mid
    padding: 26px 27px
    margin: 0
  &__content
    margin: 35px 27px
    display: flex
    flex-wrap: nowrap
    justify-content: space-between
  &__player
    background-image: url('/app/images/concept_video_placeholder.png')
  &__copy
    width: 364px
  &__copy p
    color: $colors.text-mid
    font-family: "Avenir Next W01"
    font-size: 14px
    line-height: 21px
  &__player-wrapper
    position: relative
  &__play-button
    position: absolute
    top: 80px
    left: 180px
    width: 52px
    height: 52px
    cursor: pointer
  &__play-button-icon
    background-image: url('/app/images/play-button.png')
    background-size: 52px 52px 
    width: 52px
    height 52px
.walkthrough-tooltip
  background-color: $colors.white
  border-radius: 2px
  overflow: hidden
  width: 300px
  &__space-name
    font-weight: 600
  &__header
    display: flex
    flex-wrap: nowrap
    justify-content: space-between
    align-items: center
    background-color: #3D81D0
    padding: 18px
  &__heading
    color: $colors.white
    margin: 0
  &__scheme-image
    width: 242px
    margin: 22px 32px 0px 32px
  &__copy
    margin: 22px 32px
  &__button-container
    padding: 0 32px 32px
.start-walkthrough-widget
  justify-content: center
  display: flex
  margin-top: 17px
.relaunch-walkthrough-widget
  display: flex
  flex-wrap: nowrap
  justify-content: space-between
  align-items: flex-start
  background-color: rgba(229, 235, 237, 0.3);
  padding: 28px
  width: 939px
  margin: auto
  margin-top: 40px
.relaunch-walkthrough-widget .start-walkthrough-widget
  justify-content: flex-start
.space-home-spinner
  display: flex
  margin: auto
  margin-top: 10px
