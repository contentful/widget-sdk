.breadcrumbs-widget
  $background()
  display: flex;
  height: 50px;
  flex-direction: row;
  box-shadow: inset 0 -1px 2px 0 rgba(black ,.06);

.breadcrumbs-arrow
  display: inline-block;
  height: 50px;
  line-height: 50px;
  font-size: 20px;
  flex-shrink: 0;
  color: $gray;
  position: absolute;
  &:hover
    color: $gray-medium;
    cursor: pointer;
  &:active
    color: $gray-dark;
  &.left
    left: 0;
  &.right
    right: 0;

.breadcrumbs-container
  display: flex;
  height: 50px;
  flex-grow: 1;
  line-height: 50px;
  flex-direction: row;
  width: 100%;
  margin-left: 20px;
  margin-right: 20px;
  overflow: hidden;
  color: $colors.text-mid

.breadcrumbs
  flex-shrink: 0;
  display: flex;
  flex-direction: row;
  height: 100%;
  line-height: $breadcrumbs-height

.breadcrumbs.activity
  margin-left: 0.7em

.breadcrumb
  display: inline-block
  cursor: default
  flex-shrink: 0;
  .divider
    margin: 5px

.breadcrumb-divider
  margin-left: 0.4em
  margin-right: 0.4em
  color: $colors.gray
