@require './fields.styl'

$ct-editor-code-block()
  display: block
  > pre
    white-space: pre-wrap

.content-type-tab
  display: flex

.content-type-hints
  margin: 0 $rhythm(1)
  max-width: 300px

.ct-editor-json
  &__note
    margin: 0 $rhythm(1) $rhythm(1.5) 0

  &__loading
    background-image: url('/app/images/ajax-loader.gif')
    background-position: center
    background-repeat: no-repeat
    background-size: 25px 25px
    height: 30px

  &__code
    $ct-editor-code-block()

  &__code--unsaved
    $ct-editor-code-block()
    position: relative
    user-select: none
    &:before
      content: ""
      background: linear-gradient(to bottom, hsla(0, 0%, 100%, 0.6), hsla(0, 0%, 100%, 1) 80%)
      $stretch()

.icon-component[data-icon-name="field-shorttext"],
.icon-component[data-icon-name="field-shorttext-small"],
.icon-component[data-icon-name="field-longtext"],
.icon-component[data-icon-name="field-longtext-small"],
.icon-component[data-icon-name="field-number"],
.icon-component[data-icon-name="field-number-small"],
.icon-component[data-icon-name="field-decimal"],
.icon-component[data-icon-name="field-decimal-small"],
.icon-component[data-icon-name="field-boolean"],
.icon-component[data-icon-name="field-boolean-small"],
.icon-component[data-icon-name="field-json"],
.icon-component[data-icon-name="field-json-small"]
  path, circle
    fill: $colors.green-mid
  rect
    stroke: $colors.green-mid
  .x--disabled &, .x--omitted &
    path, circle
      fill: $colors.gray
    rect
      stroke: $colors.gray

.icon-component[data-icon-name="field-calendar"],
.icon-component[data-icon-name="field-calendar-small"],
.icon-component[data-icon-name="field-media"],
.icon-component[data-icon-name="field-media-small"],
.icon-component[data-icon-name="field-location"],
.icon-component[data-icon-name="field-location-small"],
.icon-component[data-icon-name="field-reference"],
.icon-component[data-icon-name="field-reference-small"]
  path, circle, rect
    stroke: $colors.green-mid
  .x--disabled &, .x--omitted &
    path, circle, rect
      stroke: $colors.gray

.icon-component[data-icon-name="field-calendar"]
  rect
    fill: $colors.green
  rect:first-of-type
    fill: none

.icon-component[data-icon-name="field-media"]
  rect
    fill: $colors.green-mid
  rect:last-of-type
    fill: none
