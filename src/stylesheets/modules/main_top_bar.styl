$main-top-bar-visual-border()
  border-right: 1px solid rgba(0,0,0,0.45)
  box-shadow: $nav-bar-box-shadow

.main-top-bar
  position: relative
  $display-flexbox()
  width: 100%
  height: $nav-bar-height
  background: $gray-darkest
  box-shadow: $nav-bar-box-shadow

  &__logo
    $display-flexbox()
    justify-content: center
    align-items: center
    width: 170px
    height: 100%
    $main-top-bar-visual-border()

  &__logo-element
    width: 123px
    height: 29px
    position: relative
    background-image: url('/app/images/logo-label.png')
    background-size: 123px 29px

  @media (min-device-pixel-ratio: 2), (min-resolution: 192dpi)
    &__logo-element
      background-image: url('/app/images/logo-label@2x.png')
