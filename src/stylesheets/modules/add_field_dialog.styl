.add-field-dialog
  &.modal-dialog
    min-width: 0
    // FIXME we shouldn't need this
    line-height: inherit
  &__list
    width: 42em
    display: flex
    flex-wrap: wrap
    justify-content: center
    line-height: 1.2
  &__list-item
    width: 7em
    margin: 0 0.5em 2em
    text-align: center
    cursor: pointer
    > h2
      font-size: 1em
  &__description
    font-size: 0.9em
    color: $cfnext-gray
  &__icon
    width: 80px
    height: 80px
    margin: 0 auto
    border: 1px solid $cfnext-light-gray
    box-shadow: 0 2px 2px rgba(0,0,0,0.1)
    display: flex
    flex-direction: column
    justify-content: center
    align-items: center
    cf-icon
      display: block
  &__config
    width: 27em
    padding-bottom: 0;
  &__info
    color: $text-dimmed
