.notifications
  // Layout
  position: absolute
  $layer('notification')

  // Hacked
  top: 60px
  right: 40px

  .notification
    // Layout
    margin-top: 10px
    padding: 1.3em 1.8em
    width: 400px
    $layer('notification')

    // Style
    background: white
    border: 1px solid $gray-light
    color: black
    font-weight: bold
    line-height: 18px
    opacity: 0.9
    border-radius: 4px
    box-shadow: 0 2px 8px rgba(0,0,0,0.4), 0 1px 1px rgba(255,255,255,0.2) inset

    &.info
      background: rgba($green, 0.95)
      border: 1px solid darken($green, 8%)
      color: white

    &.error,
    &.warn
      background: rgba($orange, 0.95)
      border: 1px solid darken($orange, 8%)
      color: white
