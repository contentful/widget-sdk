.docs-sidebar
  &__main-container
    visibility: visible
    opacity: 1
    transition: all 150ms ease-in
    &--fade-out
      visibility: hidden
      opacity: 0
  &__modal
    z-index: 1
    position: absolute
    width: 370px
    right: 24px
    top: 37px
    bottom: 80px
    border-radius: 10px
    overflow-y: scroll
    background-color: white
    color: $colors.text-mid
    box-shadow: 0 5px 40px 1px rgba(0, 0, 0, 0.16)
    visibility: hidden
    opacity: 0
    transition: all 150ms ease-in
    &::-webkit-scrollbar
      display: none
    &--fade-in
      visibility: visible
      opacity: 1
      top: 17px


  &__header
    padding: 20px 30px
    background-color: $colors.element-lightest
    border-bottom: 1px solid $colors.element-darkest
    color: $colors.text-mid
    display: flex
    align-items: center
    justify-content: space-between
    font-size: 1.4em
    line-height: 1.4em
    button.close
      font-size: 1.5em


  &__body
    h3
      margin-bottom: 1em
      margin-top: 0
    hr
      margin: 14px 0

  &__intro-content
    padding: 20px 30px

  &__button
    position: absolute
    right: 24px
    bottom: 20px
    z-index: 1000
    background-color: $colors.text-dark
    color: white
    display: flex
    font-weight: bold
    padding: 10px 20px
    border-radius: 22px
    border-color: $colors.blue-dark
    align-items: center
    user-select: none
    cursor: pointer
    &-text
      margin-left: 10px

  &__callout
    background-color: white
    position: absolute
    width: 350px
    padding: 20px 25px
    bottom: 80px
    right: 20px
    z-index: 1
    border-radius: 10px
    box-shadow: 0 5px 40px 1px rgba(0, 0, 0, 0.16)
    transition: all 150ms ease-in
    &--hide
      display: none

  &__line
    display: block
    margin-bottom: 1.5em
    strong
      color: $colors.text-mid

  &__token-line
    display: flex
    input[type="text"]
      background-color: $colors.element-light
    .cfnext-form__icon-suffix
      border-left: 1px solid $metallic-gray
    button.cfnext-form__icon-suffix
      background-color: $colors.green-light
      border-radius: 0 3px 3px 0
      border: 1px solid $metallic-gray

  &__token
    flex-grow: 1

  &__prompt
    color: $colors.text-lightest
    margin: 10px 0
