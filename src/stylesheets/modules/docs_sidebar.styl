.docs-sidebar
  &__bg
    $stretch()
    background-color: rgba(0,0,0,0.3)
    z-index: 150

  &__modal
    position: absolute
    width: 370px
    right: 14px
    top: 14px
    bottom: 14px
    border-radius: 4px
    overflow-y: scroll
    background-color: white
    &::-webkit-scrollbar
      display: none

  &__header
    padding: 20px 30px
    background-color: $colors.element-lightest
    border-bottom: 1px solid $colors.element-darkest
    color: $colors.text-mid
    display: flex
    align-items: center
    justify-content: space-between
    font-size: 1.4em
    line-height: 1.4em
    button.close
      font-size: 1.5em


  &__body
    // padding: 20px
    h3
      margin-bottom: 1em
      margin-top: 0
    // code
    //   &:before
    //     content: '> '
    //   font-size: 0.92em
    //   word-break: break-all
    //   background-color: black
    //   color: #0f0
    //   padding: 4px
    //   display: block
    hr
      margin: 14px 0

  &__intro-content
    padding: 20px 30px

  &__button
    position: absolute
    right: 20px
    bottom: 20px
    z-index: 1000
    background-color: $colors.text-dark
    color: white
    display: flex
    font-weight: bold
    padding: 10px 20px
    border-radius: 22px
    border-color: $colors.blue-dark
    align-items: center
    &-text
      margin-left: 10px

  &__ninja
    position: absolute
    right: 20px
    bottom: 20px
    z-index: 1000
    &__image
      background-image: url('/app/images/ninja/ninja.png')
      background-position: center
      background-size: contain
      background-repeat: no-repeat
      width: 56px
      height: 56px

      &:hover
        background-image: url('/app/images/ninja/ninja-hover.jpg')
        &::after
          content: '卄丹ㄥㄗ!!'
          bottom: 56px
          right: 20px
          width: 76px
          position: absolute
  &__callout
    background-color: white
    position: absolute
    width: 350px
    padding: 20px 25px
    bottom: 80px
    right: 20px
    border-radius: 10px
    box-shadow: 0 5px 40px 1px rgba(0, 0, 0, 0.16)

  &__ninja-open
    position: absolute
    right: 20px
    bottom: 20px
    z-index: 1000
    background-position: center
    background-size: contain
    background-repeat: no-repeat
    width: 56px
    height: 56px
    background-image: url('/app/images/ninja/ninja-hover.jpg')

  &__line
    display: block
    margin-bottom: 1.5em

  &__token-line
    display: flex
    input[type="text"]
      background-color: $colors.element-light
    .cfnext-form__icon-suffix
      border-left: 1px solid $metallic-gray
    button.cfnext-form__icon-suffix
      background-color: $colors.green-light
      border-radius: 0 3px 3px 0
      border: 1px solid $metallic-gray

  &__token
    flex-grow: 1

  &__key-icon
    background-image: url('/app/images/ninja/key_icon.gif')
    width: 32px
    height: 32px
    background-position: center left
    background-size: auto 26px
    background-repeat: no-repeat

  &__prompt
    color: $colors.text-lightest
    margin: 10px 0
