*[cf-link-editor]
  display: block
  position: relative
  width: $form-controlwidth-inner

.linked-entities
  margin: 0 0 15px 0

  .fa-times-circle
    line-height: inherit
    font-size: 1em
    color: $blue-dark
    padding-right: 6px
    &:hover
      color: $gray-medium
      cursor: pointer

.linked-entities__item
  display: flex
  align-items: center
  background-color: $gray-lighter
  margin-bottom: 3px
.asset-link
  .linked-entities__item
    border-top: none
    border-bottom: none
    background-color: none

.linked-entities__handle
  width: 4%
  padding-top: 3px
  padding-left: 7px
  cursor: -webkit-grabbing
  cursor: -moz-grab
  cursor: -moz-grabbing
  &[disabled]
    cursor: auto
  .fa-ellipsis-v
    color: $gray
    opacity: 0.7
    font-size: 15px
.asset-link
  .linked-entities__handle
    top: 50%
    left: 20px
    font-size: 13px
    $layer('handle')

.linked-entities__info
  display: flex
  width: 100%
  height: 38px
  line-height: 38px
  position: relative
  padding-left: 4%
  &,
  > a,
  > span
    flex-grow: 1
    overflow: hidden
    white-space: nowrap
    text-overflow: ellipsis
    color: $base-font-color

.linked-entities__status
  position: relative
  height: 100%;
  width: 8px
  min-width: 8px;
  .status-bar
    $stretch(0, 0, 0, 0)

.linked-entities--with-handle
  .linked-entities__info
    width: 96%
    padding-left: 7px
.asset-link
  .linked-entities__info
    display: block
    height: 250px
    padding: 0
  .linked-entities__status
    position: absolute
    right: 0
  .file-info .file-preview
    border: none
    background: none
    box-shadow: none
    border-radius: 0


.link-editor__controls
  position: relative
  display: flex
  align-items: center

.link-editor__search-input
  flex-grow: 1
  margin-right: 1.6rem

.link-editor__add-button
  flex-shrink: 0
  margin-left: auto
  padding-top: 0.5rem
  padding-bottom: 0.5rem


.link-editor__search
  position: relative
  margin-bottom: 18px

  .endless-container
    max-height: 350px
    overflow-x: hidden
