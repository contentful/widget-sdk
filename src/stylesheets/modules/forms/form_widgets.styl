/**
 * Styles for various form wigets
 */
.cf-object-editor
  textarea
    $monospace-font()
    white-space: pre
    word-wrap: normal
    overflow-x: scroll
    &.ng-invalid-json
      border-color: red
  span
    position: relative
    top: 1px
  .fa-exclamation-triangle
    position: relative
    top: 1px

.cf-number-editor
  position: relative
  .cf-field-alert
    position: absolute
    top: 0
    right: 10px
    line-height: 35px

.data-field-boolean .l-form-controls,
.data-field-string-list .l-form-controls
  label
    width: auto
    position: relative
    top: -2px
  span
    position: relative
    top: 2px

cf-google-maps
  .google-map,
  .invalid-location-warning
    width: $form-controlwidth-inner
    height: 250px
  .invalid-location-warning
    background-color: rgba(255,255,255,0.9)
    text-align: center
    position: absolute
    top: 0
    .text
      width: 30%
      margin: auto
      margin-top: 110px
      font-size: $base-font-size
      background-color: white
      box-shadow: 0 0 20px 12px white
  .search-results
    overflow-y: auto
    max-height: 200px
    right: 37px
    li
      padding: 5px 10px
      border-bottom: 1px solid $gray-lightest
      cursor: pointer
      &:hover
        background-color: $result-list-highlight
    .address
      display: block
      margin-bottom: 4px
    .lat,
    .lon
      font-size: 0.8em
      display: inline-block
      width: 12em
      color: $gray
  .search
    margin-bottom: 10px
  .sub-fields
    position: relative
    display: flex
    flex-wrap: wrap
    align-items: flex-end
    width: $form-controlwidth-inner
    margin-top: 5px
    .search
      width: 100%

.widget-location-editor
  position: relative
  .cf-field-alert
    position: absolute
    top: 20px
    right: 20px

.location-fields
  position: relative
  display: flex
  align-items: flex-end

  &__remove-button
    flex-shrink: 0
    padding-top: 0.5rem
    padding-bottom: 0.5rem


.widget-location-editor__location-picker
  display: block
  flex-grow: 1
  margin-right: 1.5rem
  flex-grow: 0
  // TODO cascading sucks !important
  width: auto !important
  padding: 0 !important
  > input
    margin-top: 5px


cf-radio-editor
  display: block
.cf-radio-editor__option
  line-height: 40px
  margin-right: 1em
.cf-radio-editor__radio
  margin-top: 1px
  vertical-align: middle
  margin-right: 1ex

cf-rating-editor
  display: block
  margin-top: 10px
  margin-bottom: 10px
  padding-top: 2px
  cursor: pointer
.cf-rating-editor__star
  display: inline-block
  width: 10px
  height: 10px
  border-radius: 5px
  border: 1px solid $gray-light
  margin-right: 5px
  &.is-active
    background-color: $gray-medium
  &.is-pending
    background-color: $gray
.clear-rating-button
  margin-top: -3px

.widget-datetime-editor
  input[type="text"] // TODO we can simplify this selector once we simplify form controls
    display: inline
  .fa-calendar,
  .fa-clock-o
    font-size: 14px
    color: $gray
    vertical-align: middle
    pointer-events: none
    position: relative
    left: -25px
  .cfnext-select-box
    margin-right: 1ex


.is-date-invalid,
.is-time-invalid
  position: relative
  top: 3px
  font-size: 14px
  color: $orange

.widget-slug-editor
  input[type="text"]
    display: inline
  i.fa
    font-size: 14px
    vertical-align: middle;
    position: relative
    margin-left: -25px
  .is-slug-duplicate
    color: $orange
  .is-slug-unique
    color: $green

.widget-url-editor,
.embed-content-dialog
  input[type="text"]
    display: inline
  i.fa
    font-size: 14px
    vertical-align: middle
    position: relative
    margin-left: -25px
  .is-url-invalid
    color: $red
  .is-url-broken
    color: $orange
