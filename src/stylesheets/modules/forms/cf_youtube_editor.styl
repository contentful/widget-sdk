/**
 * @component .youtube-editor
 */
.youtube-editor__loading,
.youtube-editor__remove
  position: absolute
  top: 9px
  right: 9px

.youtube-editor__remove
  color: $red
  cursor: pointer

.youtube-editor__warning
  margin-bottom: $rhythm(0.5)
  color: $orange

  > .fa.fa-exclamation-triangle
    margin-right: 0.4em;

/**
 * @component .youtube-player
 */
.youtube-player
  display: block;

.youtube-player.ng-animate
  transition: all cubic-bezier(0.250, 0.460, 0.450, 0.940) 0.5s

.youtube-player.ng-hide-add,
.youtube-player.ng-hide-remove.ng-hide-remove-active
  height: 100%
  opacity: 1

.youtube-player.ng-hide-remove,
.youtube-player.ng-hide-add.ng-hide-add-active
  opacity: 0
  height: 0%

.youtube-player__title
  margin-bottom: $rhythm(0.5);

