$input-width                     = 100%
$input-width-with-search-enabled = 80%
$video-player-height             = 350px
$video-player-height--thumbnail  = 100px
$video-player-width--thumbnail   = 178px
$controls-bar-background-color   = rgba(235, 235, 235, 0.8)

cf-video-input
  display: block;

.video-widget-loading
  .fa-spinner
    margin-left: 25px;

.video-widget-input
  width: 100%
  display: flex

.video-widget-input__symbols
  position: absolute
  top: 7px
  left: 77%

  .fa.fa-times-circle
    color: $red

.video-widget-input__symbols--wide
  left: 97%

.video-widget-input__search
  margin-left: auto

.video-widget-input__video-id
  width: $input-width !important
  float: left

.video-widget-input--search-enabled
  width: $input-width-with-search-enabled !important

.video-widget-editor__warning
  margin: $rhythm(0.5) 0
  color: $orange

  .fa.fa-exclamation-triangle
    float: left
    margin-top: 3px

  .fa.fa-times-circle
    float: none
    position: absolute
    top: 3px
    right: 0px

.video-widget-editor__warning-message
  margin-left: 20px

.video-widget-editor__loading-info
  width: $input-width-with-search-enabled;
  position: relative;

  .fa.fa-spinner
    position: absolute
    top: 3px
    right: 8px

.video-widget-editor__loading-info--wide
  width: $input-width;

.video-widget-player__title
  margin-bottom: $rhythm(0.5)

.video-player
  display: block
  margin-top: $rhythm(0.5)

  &.ng-hide-remove
    display: block !important

  &.ng-hide-remove,
  &.ng-leave.ng-leave-active
    opacity: 0
    height: 0%

  &.ng-leave,
  &.ng-hide-remove.ng-hide-remove-active
    opacity: 1
    height: 100%

  &.ng-leave.ng-animate,
  &.ng-hide-remove.ng-animate
    transition:all cubic-bezier(0.250, 0.460, 0.450, 0.940) 0.8s

  .video-player__container
    // Some players overwrite the container height. So force it
    height: $video-player-height !important

.video-player--embedded
  margin-top: 0
  &.ng-animate
    transition: none !important

  .video-player__container
    height: $video-player-height--thumbnail !important
    width: $video-player-width--thumbnail !important


.video-dialog
  display: block
  height: 340px
  position: relative

  & > .loading
    background-size: 13px
    position: absolute
    top: 3px
    right: 35px

.modal-dialog__content.video-dialog__content
  overflow: hidden

.video-dialog__field
  input[type=search]::-webkit-search-cancel-button
    display: none

.video-dialog-results__notice
  margin-top: 100px
  text-align: center

.video-dialog-results__results-container
  height: 100%

.video-dialog-results
  height: 85%
  width: 619px
  margin-top: 20px

.video-dialog-result-info
  margin-top: 8px

.video-dialog-result-info__title
  float: left
  overflow: hidden
  text-overflow: ellipsis
  white-space: nowrap
  width: 115px

.video-dialog-result-info__duration
  float: right

.video-dialog-result__loading-message
  padding-top: 78px

.video-dialog-result__thumbnail,
.video-dialog-result__loading
  width: $video-player-width--thumbnail
  height: $video-player-height--thumbnail !important //force the height for the loading element

.video-dialog-result__thumbnail
  background-color: $gray-lightest

  img
    height: 100%
    display: block
    margin: 0 auto

.video-dialog-result
  position: relative
  float : left
  margin: 5px 10px 20px

  &.hover
    .fa-play
      display: block

  &.selected
    .fa-stack
      color: $blue-light;

  &.playing
    .fa-pause
      display: block

    .fa-play
      display: none

.video-dialog-result__controls-bar
  $layer('videoWidgetControls')
  height: 27px
  width: 100%
  background-color: $controls-bar-background-color;
  position: absolute
  top: 0

  .fa
    $layer('videoWidgetControls')

  .fa-stack, .fa-play, .fa-pause
    display: none
    position: absolute
    color: $gray-medium-light;

  .fa-stack
    display: block;
    top: 1px
    right: 6px

  .fa-play, .fa-pause
    top: 7px
    left: 8px

  &.ng-hide-remove,
  &.ng-hide-add
    display: block !important
    transition:0s linear all;

  &.ng-hide-remove,
  &.ng-hide-add.ng-hide-add-active
    background-color: $controls-bar-background-color;
    opacity: 0

  &.ng-hide-add,
  &.ng-hide-remove.ng-hide-remove-active
    background-color: $controls-bar-background-color;
    opacity: 1

  &.ng-hide-remove.ng-hide-remove-active,
  &.ng-hide-add.ng-hide-add-active
    transition:all cubic-bezier(0.250, 0.460, 0.450, 0.940) 0.3s

.multi-video-widget__item
  position: relative
  margin-bottom: 25px

  .fa.fa-times-circle
    float: right
    color: $red
    margin-right: 8px
    margin-top: 4px

.multi-video-widget-item__handle
  position: absolute
  color: white
  top: 30px
  left: 9px
  $layer('videoWidgetControls')
  cursor: -webkit-grabbing
  cursor: -moz-grab
  cursor: -moz-grabbing
  text-shadow: 1px 1px 1px rgba(0,0,0,0.6)

.multi-video-widget-item__player
  margin-top: 7px
