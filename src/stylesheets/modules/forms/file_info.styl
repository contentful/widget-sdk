.file-info
  position: relative
  height: 250px
  .center
    text-align: center
  .vcenter
    line-height: 248px
    p
      line-height: normal
      display: inline-block
  .loading
    $stretch()
    width: auto
    height: auto
  cf-thumbnail
    $stretch()
  .thumbnail
    vertical-align: middle
    cursor: pointer

  [aviary-editor-preview]
    display: none

  .file-preview,
  .file-metadata,
  .file-selector,
  .file-progress,
  .no-file
    background-color: $gray-lightest
    border: 1px solid $gray
    border-radius: 3px
    $stretch()

  .file-preview
    border-radius: 3px 3px 3px 3px
    box-shadow: 0 1px 2px rgba(0,0,0,0.1) inset
    text-align: center
    overflow: hidden
    .icon
      font-size: 100px
      line-height: 250px

  .file-metadata
    background-color: rgba(255, 255, 255, 0.8)
    padding: 10px
    th
      text-align: left
      padding-right: 1em

  .file-selector
    .__filestack-drop-pane-mount
      position: absolute
      top: 0
      bottom: 0
      left: 0
      right: 0
      z-index: 1
    .file-selector-btn-wrapper
      position: absolute
      bottom: 20px
      left: 0
      right: 0
      z-index: 2
      text-align: center

  .title-overlay
    opacity: 0
    position: absolute
    top: 15px
    left: 10px
    font-size: 20px

  .drag-me,
  .drop-me,
  .progress
    font-size: 25px
  .drop-me
    background-color: $gray-light
  .drag-me,
  .progress
    line-height: 200px
  .progress
    .cf-progress-bar
      margin: -70px 180px 0px

  .file-buttons
    $stretch(false, 10px, 10px, 10px)
    opacity: 0
    transition: opacity 0.1s ease-in-out
    display: flex
    > *
      margin-right: 0.5rem


.file-info:hover
  .file-buttons
    opacity: 1
  .title-overlay
    opacity: 0.8
