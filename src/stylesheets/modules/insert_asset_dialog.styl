.insert-asset-dialog
  width: 60%

  .modal-dialog__content
    $pie-clearfix()
    display: flex
  .menu-with-buttons
    flex-basis: 20%
    margin-right: 20px
    height: initial
  .main
    flex-basis: 80%
    display: flex
    flex-direction: column
  .search-with-resutls
    flex-basis: 100px
  .assets
    display: flex
    flex-wrap: wrap
    overflow-y: auto
    height: 500px
  .asset
    height: 150px
    width: 150px
    padding: 10px
    text-align: center
    position: relative
  .fa-check
    $stretch()
    font-size: 40px
    line-height: 150px
    color: $blue
    background: rgba(255,255,255,0.7)
  .cf-thumbnail
    margin: auto
    width: 100px
    height: 100px
    display: flex
    align-items: flex-end
    justify-content: center
  .icon
    font-size: 60px
    line-height: 100px
  .asset-title
    white-space: nowrap
    overflow: hidden
    text-overflow: ellipsis

