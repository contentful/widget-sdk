.advice
  $stretch()
  $display-flexbox()
  flex-direction: column
  justify-content: center
  text-align: center

  .advice__frame
    width: 600px
    margin: 0 auto

  p
    margin-bottom: 4px

  .advice-title
    font-weight: bold
    font-size: 25px
    line-height: 25px
    margin-top: 1em
    margin-bottom: 2em

  .advice-description
    font-size: 1.2em
    margin-bottom: 2em
    margin-top: 1em

  .top-advice
    margin-bottom: 10em

  .medium-icon
    font-size: 125px

  .giant-icon
    font-size: 200px

  .giant-icon, .medium-icon
    color: $gray-medium
    text-shadow: 0 -1px 0px rgba(0,0,0,0.7)

  .btn--primary
    margin-bottom: 15px

.advice--no-spaces
  top: 70px
