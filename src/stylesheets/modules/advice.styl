.advice
  position: relative
  margin: auto
  text-align: center
  width: 600px

  p
    margin-bottom: 4px

  .advice-title
    font-weight: bold
    font-size: 25px
    line-height: 25px
    margin-top: 1em
    margin-bottom: 2em

  .advice-description
    font-size: 1.2em
    margin-bottom: 2em
    margin-top: 1em

  .top-advice
    margin-bottom: 10em

  .giant-icon
    font-size: 200px
    color: $gray-medium
    text-shadow: 0 -1px 0px rgba(0,0,0,0.7)

  .btn--primary
    margin-bottom: 15px

.advice.inner-advice
  position: static
  margin: auto
  padding-top: 80px

  .giant-icon
    font-size: 125px

