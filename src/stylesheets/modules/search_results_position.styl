.search-results-position
  display: flex
  flex-wrap: wrap
  width: 30%
  max-width: 180px
  margin-left: 16px
  margin-top: 6px
  .inline-select
    margin: auto 3px
  .search-results-position__entries,
  .search-results-position__pages
    margin-bottom: 0

@media (max-width: 1300px)
  .search-results-position
    .inline-select
      margin: 0
      margin-right: 3px
  .search-results-position__entries
    align-self: stretch
    width: 100%
    margin-bottom: 5px
