.space-template__dialog-content
  display: flex
  position: relative
  height: 600px
  width: 900px
  overflow-y: scroll
  &.modal-dialog__content
    margin: 0
  > .loading
    margin: auto

.space-template__list,
.space-template__detail
  font-size: 1.1em

.space-template__list
  width: 70%
  padding-top: 5px
.space-template__detail
  width: 30%
  padding-left: 30px
  padding-right: 30px

.space-template__list,
.space-template__detail-content
  overflow-y: auto

.space-template__detail-content
  height: 498px
  margin-bottom: 10px
  h1
    font-size: 1.3em
    margin-bottom: 25px
  > div, > p
    line-height: 1.4em

.space-template__item
  float: left
  width: 140px
  height: 190px
  text-align: center

.space-template--item-selected
  .space-template__icon
    box-shadow: 0px 1px 1px rgba(0, 0, 0, 0.4), 1px 1px 1px transparentify($metallic-gray-blueish, 0.4) inset, -1px -1px 1px transparentify($metallic-gray-blueish, 0.4) inset

.space-template__icon
  display: flex
  align-items: center
  width: 100px
  height: 135px
  margin: 0 auto 8px
  border: 1px solid $metallic-gray-blueish
  border-radius: 2px
  box-shadow: 0px 1px 1px rgba(0, 0, 0, 0.3)
  img
    margin: auto
  .fa-plus-circle
    margin: auto
    font-size: 50px
    color: $metallic-gray-blueish
  &:hover
    border-color: $blue-link
    box-shadow: 0px 1px 1px transparentify($blue-link, 0.3)

.space-template__contact
  position: absolute
  bottom: 0
  left: 0
  right: 30%
  text-align: center
  padding: 5px

.space-template__space-creation
  width: 100%
  padding: 10px 20px 0px
  .knowledge-base-link
    font-size: 0.7em
    margin-left: 4px

.space-template__org-selector
  position: relative
  button
    width: 100%

.space-template__org-dropdown
  width: 200px

.space-template__space-creation-form
  width: 50%
  height: 50%
  margin: 10% auto 0
  .l-form
    margin-left: 0
  .dropdown-toggle
    width: 100%
  .buttons
    border: none


