$content-type-field-bottom-margin = $rhythm(1)

$content-type-field-empty-style()
    border: 1px dashed $cfnext-light-gray
    background-color: lighten($cfnext-light-gray, 80%)

.content-type-fields,
.content-type-no-fields
  max-width: 50em
  margin-top: $rhythm(1)
  .sortable-placeholder
    $content-type-field-empty-style()
    margin-bottom: $content-type-field-bottom-margin

.content-type-no-fields
  position: relative
  .ct-field
    $content-type-field-empty-style()
    box-shadow: none
  .ct-field:nth-child(0n+1)
    opacity: 0.5
  .ct-field:nth-child(0n+2)
    opacity: 0.4
  .ct-field:nth-child(0n+3)
    opacity: 0.3
  .ct-field:nth-child(0n+4)
    opacity: 0.2
  .ct-field:nth-child(0n+5)
    opacity: 0.1
  .advice
    $stretch(0, 0, 0, 0)
    display: flex
    align-items: center
    justify-content: center
  .advice__frame
    width: 32em
    height: 9em
    padding-top: $rhythm(1)
    $content-type-field-empty-style()
    border-style: solid
    border-radius: 1px
    display: flex
    justify-content: center
    flex-direction: column
  .advice__title
    font-size: 1.2em
  .advice__description
    font-size: 1em
    margin-bottom: $rhythm(0.3)
    color: $cfnext-gray


$ct__field-padding = 0.8em
.ct-field
  padding-right: 1em
  height: $rhythm(2.5)
  display: flex
  align-items: center
  margin-bottom: $content-type-field-bottom-margin
  border: 1px solid $cfnext-light-gray
  border-radius: 1px
  box-shadow: 1px 1px 2px 0 $cfnext-light-gray
  background-color: white
  &.is-disabled
    color: $gray


  &__name
    font-weight: bolder
    margin-right: 1em

  &__icon
    margin-right: 1em
    cf-icon
      margin-top: 5px
      display: block

  &__type
    flex-grow: 1
    margin-right: 1em
    color: $gray

  &__is-title
    margin-right: 2em

  &__disable
    $cfnext-btn-plain()
    min-width: 10ex
    margin-left: 0.5em
    text-align: right
    font-weight: normal

  &__drag-handle
    width: 16px
    align-self: stretch
    margin: -1px
    margin-right: 1em
    background-color: transparentify(lighten($cfnext-green, 40%), 0.2)
    border: 1px solid transparentify(lighten($cfnext-green, 40%), 0.2)
    cursor: move
    cursor: -webkit-grabbing
    cursor: -moz-grab
    cursor: -moz-grabbing
    .is-disabled &
      background-color: transparentify($cfnext-gray, 0.2)
      border: 1px solid transparentify($cfnext-green, 0.2)

.content-type-no-fields
  .ct-field
    &__name
      font-weight: normal
      color: $cfnext-gray
    &__drag-handle
      background-color: transparentify($cfnext-gray, 0.1)
      border: 1px dashed transparentify($cfnext-gray, 0.1)

