.paywall
  color: $gray-medium
  p
    margin-bottom: 1.6em
    font-size: 1em
  .paywall__intro
    font-size: 1.2em
    font-weight: bold
    line-height: 1.5
  .paywall__bottom-note
    font-size: 0.9em
    font-style: italic
    color: $gray
    margin-bottom: 0
    a
      cursor: pointer
  .paywall__recommended-subscription
    h2
      font-size: 1em
      font-weight: normal
      text-align: center
      margin-bottom: 1.5em
      color: $gray-medium

  .modal-dialog
    > *
      padding-left: 65px
      padding-right: 65px

    &__header
      background-color: white
      border: none
      padding-top: 45px
      padding-bottom: 0
      h1
        font-size: 2em
        color: $gray-dark
        &:after
          content: "."
      i
        font-size: 4em
        margin-right: .3em
        color: $red

    &__close
      position: absolute
      top: 10px
      right: 10px

    &__content
      display: flex
      padding-top: 25px
      padding-bottom: 45px
      .paywall__content
        flex: 3
        max-width: 450px
      .paywall__recommended-subscription
        flex: 2
        max-width: 220px
        min-width: 160px
        margin-left: 4em
        margin-top: -55px

    &__controls-confirm
      margin: 3px 0 50px 0

// Subscription plan box
// Copied over from Gatekeeper's "zuora.css.scss" and adjusted
.z-subscription-plan {
  border: 1px solid $gray-lighter;
  display: flex;
  flex-direction: column;
  padding: 0;
  padding-bottom: 4em;
  position: relative;
  box-shadow: 0 1px 2px 0 rgba(0,0,0,0.08);
  padding: 30px 15px;
  text-align: center;
  min-height: 0;
  color: $gray-dark;

  .z-subscription-plan-icon {
    margin: 0 auto;
    width: 31px;
    height: 31px;
  }

  .z-plan-icon-plus {
    content: url("/app/svg/paywall-planplus.svg");
  }

  .z-subscription-plan-name {
    font-size: 1.1em;
    text-align: center;
    h3 {
      margin-bottom: 20px;
    }
    &:after {
      content: '';
      position: absolute;
      background-color: $gray-lighter;
      height: 1px;
      width: 20%;
      left: 40%;
    }
  }

  .z-subscription-plan-details {
    padding: .5em;
  }

  .z-subscription-plan-price {
    display: inline-flex;
    margin: 20px auto;
    line-height: 3em;
    .symbol {
      margin-top: -0.6em;
      margin-right: 0.4em;
      color: $gray;
    }
    .amount {
      font-size: 3em;
    }
    .period {
      color: $gray;
      margin-top: 0.6em;
      margin-left: 0.2em;
    }
  }

  .z-subscription-plan-limits {
    .limit-value {
      font-weight: 600;
    }
    .limit-name {
      color: $gray;
    }
  }
}