// Layout
$modal-dialog-padding = 20px

.modal-background
  $stretch()
  text-align: center
  background-color: rgba(0, 0, 0, 0.2)
  z-index: 1

.modal-dialog
  display: inline-block
  position: relative
  min-width: 500px
  padding: $modal-dialog-padding
  text-align: left

.modal-dialog,
$modal-dialog-chrome
  background-color: white
  border: 1px solid $gray
  border-radius: 3px
  box-shadow: 0 2px 6px rgba(0,0,0,0.1)
  line-height: 15px

.modal-dialog .title,
$modal-dialog-title
  font-size: 14px
  font-weight: bold
  color: black
  border-bottom: 1px solid $gray-lightest
  margin: -($modal-dialog-padding)
  margin-bottom: 0
  padding: $modal-dialog-padding
  background: $gray-lightest

.close-button
  color: $gray-light
  cursor: pointer
  font-weight: lighter
  &:hover
    color: $gray
  &:after
    content: 'Ã—'
    font-size: 30px

.dialog-plaintext
  white-space: pre

.dialog-richtext
  max-width: 40em

.modal-dialog-close-button,
$modal-dialog-close-button
  @extend .close-button
  position: absolute
  top: 0
  right: 0
  margin: $modal-dialog-padding

.modal-dialog .dialog-content,
$modal-dialog-content
  margin: $modal-dialog-padding 0
.modal-dialog .buttons,
$modal-dialog-buttons
  border-top: 1px solid $gray-lightest
  margin-left: -($modal-dialog-padding)
  margin-right: -($modal-dialog-padding)
  padding-right: $modal-dialog-padding
  padding-left: $modal-dialog-padding
  padding-top: ($modal-dialog-padding / 2)
  margin-top: ($modal-dialog-padding / 2)
  text-align: right
