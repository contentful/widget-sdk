.nav-bar
  height: 100%
  user-select: none

.nav-bar__list
  height: inherit
  .tooltip
    display: none !important

.nav-bar__list-item
  float: left
  display: inline-block
  height: inherit
  list-style-type: none
  margin: 0

.nav-bar__link
  $display-flexbox()
  align-items: center

.nav-bar__list-label
  margin-left: 4px

$hide-navbar-text()
  .nav-bar__list
    .tooltip
      display: block !important
  .nav-bar__list-label
    display: none

@media (max-width: 1200px)
  .nav-bar.with-persistent-notification
    $hide-navbar-text()

@media (max-width: 1050px)
  .nav-bar
    $hide-navbar-text()

