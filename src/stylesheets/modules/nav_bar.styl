.nav-bar
  height: 100%
  user-select: none

.nav-bar__list
  height: inherit

.nav-bar__list-item
  float: left
  &, &--right
    display: inline-block
    height: inherit
    list-style-type: none
    margin: 0
  &--right
    float: right

.nav-bar__link
  display: flex
  align-items: center
  &.is-active
    color: $colors.blue-mid

.nav-bar__list-label
  margin: 0 10px

