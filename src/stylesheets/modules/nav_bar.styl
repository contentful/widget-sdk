.nav-bar
  height: 100%
  user-select: none
  display: flex

.nav-bar__list
  height: inherit
  display: flex

.nav-bar__list-item
  margin: 0

.nav-bar__link
  display: flex
  align-items: center
  height: 100%
  border-top: solid 3px transparent
  border-bottom: solid 3px transparent
  transition: color 0.1s ease-in-out
  &:hover, &.is-active
    color: $colors.blue-mid
  &.is-active
    border-bottom-color: $colors.blue-mid
