.nav-bar
  height: 100%
  user-select: none
  display: flex

.nav-bar__list
  height: inherit
  display: flex

.nav-bar__list-item
  margin: 0

.nav-bar__link
  display: flex
  align-items: center
  height: 100%
  border-bottom: solid 3px transparent
  &.is-active
    color: $colors.blue-mid
    border-color: $colors.blue-mid

.nav-bar__list-label
  margin-left: 10px

