.nav-bar
  height: 100%
  user-select: none

.nav-bar__list
  height: inherit

.nav-bar__list-item
  float: left
  display: inline-block
  height: inherit
  list-style-type: none
  margin: 0

.nav-bar__link
  display: flex
  align-items: center
  &.is-active
    color: $cfnext-blue

.nav-bar__list-label
  margin-left: 10px

