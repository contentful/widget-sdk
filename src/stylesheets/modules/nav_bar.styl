.nav-bar
  height: 100%
  user-select: none
  display: flex

  &__separator:not(:first-child)
    margin-top: 15px
    border-top: 1px solid $colors.element-mid
    padding-top: 15px

  &__separator:hover
    background: white
    color: inherit
    cursor: auto

  .tooltip-inner
    white-space: pre-wrap
    width: 200px

.nav-bar__list
  height: inherit
  display: flex

.nav-bar__list-item
  margin: 0

.nav-bar__link
  display: flex
  align-items: center
  height: 100%
  border-top: solid 3px transparent
  border-bottom: solid 3px transparent
  transition: color 0.1s ease-in-out
  &:hover, &.is-active
    color: $colors.blue-mid
  &.is-active
    border-bottom-color: $colors.blue-mid
