.space-selector
  position: relative
  min-width: 170px
  max-width: 200px
  &__name
    display: block
    width: inherit
  &__dropdown
    left: 0
  &__list
    $scroll-vertically(500px)
    &.cfnext-dropdown__list,
    &.cfnext-dropdown__list--first
      margin-bottom: 0
  &__group-label
    text-transform: uppercase
    letter-spacing: 0.1em
    font-size: 0.8em
    font-weight: bold
  .selected
    .icon-checkmark
      display: inline-block
      position: relative
      margin-left: 4px
      img
        position: relative
        top: 3px
  .fa-circle
    margin-left: 5px

@media (max-width: $nav-bar-break-width)
  .space-selector
    width: 120px
    min-width: 120px
    max-width: 120px
