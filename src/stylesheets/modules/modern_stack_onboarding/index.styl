.modern-stack-onboarding

  &--container
    z-index: 3
    position: fixed
    top: 0
    bottom: 0
    left: 0
    right: 0
    background: #eee
    overflow-y: scroll

  &--wrapper
    margin: 15px auto
    max-width: 1500px

  &--header
    display: flex
    justify-content: space-between
    margin: 50px 0 30px

  &--title
    font-size: 44px
    text-align: center
    line-height: 1.2
    margin: 150px auto 100px
    font-weight: 700
    max-width: 800px

  &--subtitle
    margin: -80px auto 50px
    max-width: 800px
    font-size: 20px
    font-weight: 300
    line-height: 1.2
    text-align: center

  &--choice-title

  &--choice-blocks
    display: flex
    justify-content: center

  &--choice-block
    position: relative
    text-align: center
    padding: 15px 25px
    border-radius: 3px
    width: 400px
    height: 200px
    margin: 0 30px
    border: 1px solid gray

  &--block-button-wrapper
    position: absolute
    bottom: 25px
    width: 100%

  &--next-button
    display: block
    margin: 30px auto
    padding: 10px 45px

  &--skip
    font-weight: 700
    font-size: 22px
    cursor: pointer

  &--navigation
    position: relative
    margin: 0 auto
    max-width: 800px

    &-wrapper
      display: flex
      justify-content: space-between
      position: relative
      z-index: 2

    &-circle
      color: blue
      border: 3px solid blue
      background: #fff
      font-weight: 700
      border-radius: 100%
      display: flex
      align-items: center
      justify-content: center
      width: 40px
      height: 40px

      &__active
        color: #fff
        background: blue
        cursor: pointer

    &-line
      width: 100%
      height: 3px
      background: blue
      position: absolute
      top: 18px

    &-block
      position: relative

    &-title-wrapper
      position: absolute
      white-space: nowrap

    &-title
      margin-top: 10px
      font-size: 14px
      font-weight: 700
      color: blue
      position: relative
      left: -30%

  &--copyscreen-content
    margin: 0 auto
    max-width: 1000px
    border-top: 2px solid gray
    padding-top: 50px
    padding-right: 100px

  &--copyscreen-text
    font-size: 22px
    line-height: 1.4
    margin-top: 50px

  &--copy-title
    font-size: 22px
    margin-top: 40px
    font-weight: 300

  &--content-explorer
    display: flex
    justify-content: space-between

    &-data
      width: 44%

    &-iframe
      width: 52%

    &-wrapper
      background: #fff
      padding: 25px 20px

  &--iframe
    width: 100%
    height: 1000px
    border: 0

  &--deploy-content
    margin: 0 auto
    max-width: 800px

  &--deployment-strategy
    border-top: 1px solid black
    padding-top: 20px

  &--deployment-list
    padding-left: 20px
    margin-top: 30px

    &-elem
      list-style: decimal
      padding-left: 10px

  &--deployment-form
    max-width: 800px
    margin: 50px auto 30px

    &-title
      font-size: 20px
      line-height: 1.3
      font-weight: 300
      margin-bottom: 30px

    &-input
      display: inline-block
      margin-right: 10px
      vertical-align: top

    &-button
      padding: 7px 45px
      vertical-align: top
