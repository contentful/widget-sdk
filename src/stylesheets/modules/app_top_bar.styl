$app-top-bar__action-color()
  color: $colors.white
  &:hover
    color: $colors.blue-mid

.app-top-bar
  height: $nav-bar-height
  display: flex
  background-color: $colors.contrast-light

  &__sidepanel-trigger,
  &__account-menu-trigger
    background-color: $colors.contrast-mid
    transition: background-color 0.1s ease-in-out
    &:hover
      background-color: $colors.contrast-dark

  &__sidepanel-trigger
    box-shadow: inset -1px 0 2px 0 rgba(0, 0, 0, 0.4), inset -2px 0 5px 0 rgba(0, 0, 0, 0.35)
    &:hover
      box-shadow: inset -1px 0 2px 0 rgba(0, 0, 0, 0.9), inset -2px 0 5px 0 rgba(0, 0, 0, 0.75)

  &__account-menu-trigger
    box-shadow: inset 1px 0 2px 0 rgba(0, 0, 0, 0.4), inset 2px 0 5px 0 rgba(0, 0, 0, 0.35)
    &:hover
      box-shadow: inset 1px 0 2px 0 rgba(0, 0, 0, 0.9), inset 2px 0 5px 0 rgba(0, 0, 0, 0.75)

  &__logo
    display: flex
    justify-content: center
    align-items: center
    padding: 0 1em

  &__logo-element
    width: 29px
    height: 29px
    background-image: url('/app/svg/logo-label.svg')
    background-size: 29px 29px
    flex: 1 0 auto

  &__logo-text
    $app-top-bar__action-color()
    padding-left: 1em

  &__child
    height: 100%

  &__main-nav
    flex-grow: 1
    display: flex

  &__menu-trigger
    height: 100%
    display: flex
    align-items: center;
    justify-content: space-between
    cursor: pointer;
    $app-top-bar__action-color()
    > .triangle-down
      border: 4px solid $colors.white
      border-left-color: transparent
      border-right-color: transparent
      border-bottom-color: transparent
    &:hover, &.is-active
      > .triangle-down
        border-top-color: $colors.blue-mid

  &__action
    display: flex
    flex-direction: column
    justify-content: center
    padding: 0 20px
    height: 100%
    a
      $app-top-bar__action-color()
    &:focus
      $focus-styles

  &--left-separator
    border-left: 1px solid transparentify($colors.white, 20%)
  &--right-separator
    border-right: 1px solid transparentify($colors.white, 20%)
