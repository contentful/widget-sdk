.docs-helper
  &__bg
    $stretch()
    background-color: rgba(0,0,0,0.3)
    z-index: 150

  &__modal
    position: absolute
    right: 14px
    top: 14px
    bottom: 14px
    padding: 20px
    width: 400px
    background-color: white
    border-radius: 4px
    overflow-y: scroll
    &::-webkit-scrollbar
      display: none
    h3
      margin-bottom: 1em
    code
      &:before
        content: '> '
      font-size: 0.92em
      word-break: break-all
      background-color: black
      color: #0f0
      padding: 4px
      display: block
    hr
      margin: 14px 0

  &__ninja
    position: absolute
    right: 20px
    bottom: 20px
    z-index: 1000
    &__image
      background-image: url('/app/images/ninja/ninja.png')
      background-position: center
      background-size: contain
      background-repeat: no-repeat
      width: 56px
      height: 56px

      &:hover
        background-image: url('/app/images/ninja/ninja-hover.jpg')
        &::after
          content: '卄丹ㄥㄗ!!'
          bottom: 56px
          right: 20px
          width: 76px
          position: absolute
  &__callout
    background-color: white
    position: absolute
    width: 120px
    top: -30px
    right: 0

  &__ninja-open
    position: absolute
    right: 20px
    bottom: 20px
    z-index: 1000
    background-position: center
    background-size: contain
    background-repeat: no-repeat
    width: 56px
    height: 56px
    background-image: url('/app/images/ninja/ninja-hover.jpg')

  &__line
    display: block
    margin-bottom: 1em

  &__token-line
    display: flex
    input[type="text"]
      background-color: $colors.element-light
    .cfnext-form__icon-suffix
      border-left: 1px solid $metallic-gray
    button.cfnext-form__icon-suffix
      background-color: $colors.green-light
      border-radius: 0 3px 3px 0
      border: 1px solid $metallic-gray

  &__token
    flex-grow: 1

  &__key-icon
    background-image: url('/app/images/ninja/key_icon.gif')
    width: 32px
    height: 32px
    background-position: center left
    background-size: auto 26px
    background-repeat: no-repeat

  &__prompt
    color: $colors.text-lightest
    margin: 10px 0
