.usage__period-selector
  & > label
    margin-right: 1rem

$overage-color = #FCA013

.usage-page
  display: grid
  grid-template-columns: 1fr 1fr
  grid-column-gap: 2rem
  max-width: 1100px
  margin-left: auto
  margin-right: auto
  padding-left: 1rem
  & > h2
    margin-top: 3rem
    grid-column-end: span 2
    justify-self: start
  &__org-section
    display: flex
    flex-direction: column
    justify-content: space-evenly
    align-items: flex-start
  &__total-usage
    font-size: 2.2rem
    line-height: 3rem
  &__limit
    font-size: .9rem
  &__included-limit
    color: #abbbc2
  &__overage
    color: $overage-color
  & h3
    color #9AACC2
    margin-top 0
  &__api-table
    margin-top: 3rem
    margin-left: -2rem
    border-spacing: 2rem
    font-size: 0.9rem
  &__space-usage
    color: #8091A5
  &__no-spaces-placeholder
    grid-column-end: span 2
    font-weight: 600
    font-size: 2rem
    line-height: 1.2em
    width: 100%
    text-align: center
    position: absolute
    top: 40%

.echart
  display: flex
  align-items: center
  justify-content: center
  outline: solid 1px transparent
  transition: outline 1s linear
  width: 700px
  height: 300px
  &__spinner, &__empty-placeholder
    outline-color #d0dade
  &--empty, &--loading
    display: none

.resource-list
  margin: 40px

  &__title
    margin: 40px 0 20px

  &__highlights
    display: flex
    flex-direction: row
    justify-content: space-between
    flex-wrap: wrap

  &__item
    border: 1px solid $colors.element-mid
    box-shadow: 0 1px 2px 0 hsla(black, 0.1)
    margin: 0 0 16px
    display: flex
    flex-direction: column
    height: 60px
    justify-content: space-between

    &__column
      display: flex
      flex-grow: 1
      align-items: center

    &__content
      display: flex
      align-items: center
      height: 60px;
      padding: 0 20px;

    &__title
      margin: 0

    &__description
      font-size: $base-font-size
      color: $colors.text-light
      margin-left: 10px
      font-weight: normal

    &__icon
      margin-right: 10px
      margin-bottom -3px

    &--highlight
      height: auto
      flex-grow: 1
      margin-right: 20px
      padding: 20px
      &:last-child
        margin-right: 0
      .resource-list__item
        &__usage
          font-size: 40px
          line-height: 1
          font-weight: bold

