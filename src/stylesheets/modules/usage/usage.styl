.resource-list__item
  border: 1px solid $colors.element-mid
  box-shadow: 0px 1px 2px 0px hsla(black, 0.1)
  display: block
  margin: 0 auto 16px
  display: flex
  flex-direction: column
  height: 60px
  justify-content: space-between

.resource-list__item__content
  display: flex
  align-items: center
  height: 60px;
  padding: 0 20px;

.resource-list__item__title
  margin: 0
  flex-grow: 1

.resource-list__item__usage
  text-align: right

.resource-list__item__icon
  margin-right: 10px
  margin-bottom -3px

.progress-bar
  width: 100%

.progress-bar__current
  display: block
  background: $colors.green-light
  height: 2px
  position relative