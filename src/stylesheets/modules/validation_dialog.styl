.validation-dialog .modal-dialog
  width: 800px
  user-select: none

.cf-validation-options
  $display-flexbox()
  padding: ($modal-dialog-padding / 2) 0
  border-bottom: 1px solid $gray-lightest
  margin-left: -($modal-dialog-padding)
  margin-right: -($modal-dialog-padding)
  padding-left: $modal-dialog-padding
  padding-right: $modal-dialog-padding

.cf-validation-options:last-child
  border-bottom: none
  padding-bottom: 0

.validation-type-select
  margin-right: 3%
  button
    height: 34px

// TODO this should only need prefixing by validation controls
// but the extension of form-styled creates a huge mess in
// terms of cascading
.cf-validation-options .validation-controls
  .select-box
    padding-right: 12px

    .button-icon-right
      top: 10px

  .block-list
    margin: 0
    padding: 0
    margin-top: 10px
    width: 270px
    max-height: 240px
    overflow-y: auto
    li
      text-align: left

.validation-controls
  flex-grow: 1
  margin-right: 3%
  max-width: 70%

.checkbox-list
  $display-flexbox()
  flex-wrap: wrap
.checkbox-list__item
  padding: 15px 0px
  margin-right: 3%
  input
    float: left
    margin: 0
  &:nth-child(3n+3)
    margin-right: 0
  .u-truncate
    float: left
    margin-left: 4px
    margin-top: -5px
    line-height: initial
    width: 130px

.cf-predefined-values-list
  position: relative
  width: 270px
  .fa-caret-down, .fa-caret-up
    position: absolute
    right: -20px
    color: $gray-light
  .fa-caret-down
    bottom: 3px
  .fa-caret-up
    top: 0px

.delete-validation
  display: block
  margin-left: auto
  text-transform: uppercase
  letter-spacing: 1px
  color: $gray
  line-height: 38px
  cursor: pointer
  &:hover
    color: $gray-medium

