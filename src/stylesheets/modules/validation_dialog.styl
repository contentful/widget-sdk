/**
 * Concerns:
 *
 * - validation-dialog.jade
 * - validation-values.jade
 * - validation-settings.jade
 * - validation-link.jade
 *
 * Components:
 *
 * - .validation-dialog
 * - .validation-settings
 * - .validation-controls
 * - .validation-values
 */

// Width of the left margin where the toggle checkbox sits.
$validation-indent = 30px

/**
 * @component .validation-dialog
 */
.validation-dialog .modal-dialog
  width: 800px
  user-select: none

.validation-dialog__title
  em
    font-style: normal
    &:before
      content: "“"
    &:after
      content: "” "
  .cf-knowledge-base-icon
    margin-left: 0.3em


/**
 * @component .validation-settings
 */
.validation-settings
  margin-top: 0.5em
  min-height: 250px

cf-validation-setting
  display: block;

.validation-settings__header
  margin: 0;
  font-size: 1.2em
  line-height: 3

.validation-settings__toggle
  cursor: pointer
  display: inline-block;

.validation-settings__toggle-input-wrapper
  display: inline-block;
  width: $validation-indent
  > input
    margin: 0


/**
 * @component .validation-controls
 */
.validation-controls
  margin-left: $validation-indent
  margin-bottom: 1.2em;
  margin-top: 0.2em;

  .cf-form-inline-error
    font-size: 1em;
    padding-top: 0.8em;

  input[type=number]
    width: 6em

.validation-controls__select-box
  padding-right: 12px

  .button-icon-right
    top: 10px

.validation-controls__re-pattern
  width: 22em

.validation-controls__re-flags
  width: 4em

.validation-controls__content-types
  $display-flexbox()
  flex-wrap: wrap
  margin: 0
  line-height: 2.8
  list-style: none

  > li
    margin: 0 1.8em 0 0

  input
    margin: 0 0.6em 0 0


/**
 * @component .validation-values
 */

// Width of the value input and a value list item.
$validation-values-width = 350px

.validation-value-list
  margin-top: 10px
  width: $validation-values-width
  position: relative

  .fa-caret-down, .fa-caret-up
    position: absolute
    right: -20px
    color: $gray-light
  .fa-caret-down
    bottom: 3px
  .fa-caret-up
    top: 0px

.validation-value-list__add
  width: $validation-values-width
  margin-right: 1em

.validation-value-list__scroll-frame
  max-height: 240px
  overflow-y: auto
  > ul
    margin: 0
    padding: 0

.validation-value-list__item
  $display-flexbox()
  padding: 0 0 0 0.8em
  border-radius: 5px
  color: inherit
  background: hsl(0,0%, 94%)
  cursor: move
  cursor: -webkit-grabbing
  cursor: -moz-grab
  cursor: -moz-grabbing

.validation-value-list__value
  padding: 0.8em 0;
  flex-grow: 1;
  white-space: normal

.validation-value-list__remove
  width: 2.5em
  flex-shrink: 0
  cursor: pointer

  $display-flexbox()
  align-items: center
  justify-content: space-around
  &:after
    content: '\00d7' // Unicode MULTIPLICATION SIGN
    font-size: 20px
    font-weight: lighter
  &:hover
    color: $blue
