$cfnext-dropdown__item()
  line-height: 2em
  cursor: pointer

$cfnext-caret-size: 12px

.cfnext-dropdown
  $layer('dropdown')
  position: absolute
  border: 1px solid $cfnext-light-blue
  box-shadow: 0 1px 2px rgba(0,0,0,0.5)
  border-radius: 3px
  background-color: $cfnext-lightest-blue

  &__arrow
    position: absolute
    top: -12px
    &.left-aligned
      left: $cfnext-caret-size + 10px
    &.right-aligned
      right: $cfnext-caret-size + 10px
    &.center-aligned
      left: 50%

  &__list
    padding: 10px
    border-top: 1px solid $cfnext-light-blue

  &__inner-list
    padding-top: 5px
    padding-left: 15px

  &__item
    $cfnext-dropdown__item()
    &:hover
      font-weight: bold

  &__item--no-highlight
    $cfnext-dropdown__item()
    cursor: default
    &:hover
      font-weight: normal

