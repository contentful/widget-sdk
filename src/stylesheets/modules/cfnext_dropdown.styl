.cfnext-dropdown
  $layer('dropdown')
  position: absolute
  border: 1px solid $cfnext-light-blue
  box-shadow: 0 1px 2px rgba(0,0,0,0.5)
  border-radius: 3px
  background-color: $cfnext-lightest-blue

.cfnext-dropdown__list
  padding: 10px
  border-top: 1px solid $cfnext-light-blue

.cfnext-dropdown__inner-list
  padding-top: 5px
  padding-left: 15px

$cfnext-dropdown__item()
  line-height: 2em
  cursor: pointer

.cfnext-dropdown__item
  $cfnext-dropdown__item()
  &:hover
    font-weight: bold

.cfnext-dropdown__item--no-highlight
  $cfnext-dropdown__item()
  cursor: default
  &:hover
    font-weight: normal

