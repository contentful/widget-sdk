.api-cm-list
  &:first-child
    margin-top: $rhythm(-1)
  &__item
    border-bottom: 1px solid $colors.element-light
    &__toggle
      display: flex
      cursor: pointer
      padding: 12px 0
      cf-icon[name="dd-arrow-down"]
        transition: transform 0.2s ease-in-out
        margin-left: 8px
        margin-top: 4px
        margin-bottom: 8px
        path
          fill: $blue-link
      &:hover
        cf-icon[name="dd-arrow-down"]
          path
            fill: $blue-dark-link
    &.x--open
      background-color: $colors.element-lightest
      cf-icon[name="dd-arrow-down"]
        transform: rotate(-180deg)

.content-model
  &__summary
    display: flex
    align-items: center
    justify-content: space-between
    padding: 20px 25px 19px
  &__info
    display: flex
    flex-direction: column
    justify-content: center
    width: 300px
    height: 44px
  &__id
    width: 300px
  &__id__title
    font-size: 12px
    color: $colors.text-light
    margin-bottom: 8px
  &__name
    margin: 8px 0
  &__description
    color: $colors.text-light
  &__fields
    padding: 0 25px 30px
    width: 100%
    th, td
      padding: 10px
      text-align: left
    th
      background-color: $colors.element-light
      color: $colors.text-light
      font-weight: lighter
    td
      border-bottom: 1px solid $colors.element-mid
    .cell-name
      width: 200px
    .cell-identifier
      width: 200px
    .cell-type
      i.fa-question-circle
        margin-left: 8px
        color: $colors.text-mid
    td.cell-type
      color: $colors.text-mid
