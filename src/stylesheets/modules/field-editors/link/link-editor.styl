$cf-links-editor-shadow()
  box-shadow: 0 1.5px 1.5px $colors.element-light

.link-editor
  position: relative;

  &__actions
    $cf-links-editor-shadow()
    display: inline-flex // inline for shadow
    justify-content: flex-start
    > *
      width: 18em
      padding: 1em
      border: 1px solid $colors.element-mid
      &:hover
        border: @border
      &:not(:first-child)
        margin-left: -1px

  &__links > li
    margin: 0

  [data-drag-handle] // TODO: Just have a global rule somewhere.
    color: $colors.text-light
    cursor: move
    cursor: -moz-grab
    cursor: -webkit-grab
    &:active
      cursor: -moz-grabbing
      cursor: -webkit-grabbing

  .entity-link__actions
    display: flex
    > *:not(:last-child)
      margin-right: 0.8em
    > *
      cursor: pointer
      color: $colors.text-light
      &:hover
        color: $colors.text-mid

  &:not(.x--contains-asset-cards)
    $links-gap = 12px

    .link-editor__links
      > *
        margin-bottom: $links-gap
        &:last-child
          margin-bottom: 0

    .link-editor__links:not(:empty) + .link-editor__actions
      margin-top: $links-gap


  &.x--contains-asset-cards
    $links-gap-x = 15px
    $links-gap-y = 20px

    .link-editor__links
      position: relative
      display: flex
      flex-wrap: wrap
      left: -($links-gap-x)
      top: -($links-gap-y)
      width: "calc(100% + %s)" % $links-gap-x
      > *
        margin-left: $links-gap-x
        margin-top: $links-gap-y
