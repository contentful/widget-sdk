  cf-icon(name="plug" scale="2")
  cf-icon(name="star" scale="2")
  cf-icon(name="calendar" scale="2")

Styleguide 25.1
*/

cf-icon[name="dd-arrow-down"]
  path
    fill: white

cf-icon[name="plus"]
  circle
    fill: $colors.blue-mid

cf-icon[name="plus"].inverted
  circle
    fill: white
  path
    stroke: $colors.blue-mid


