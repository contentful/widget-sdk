/**
Icons

Markup:
style(type="text/css").
  .styleguide-icon-list {
    display: flex;
    flex-wrap: wrap;
    align-items: center
  }
  cf-icon { padding: 5px; }

Styleguide 25
*/

cf-icon
  display: block
  > svg
    display: block


/**
Miscellaneous

Markup:
.styleguide-icon-list
  cf-icon(name="arrow-up" scale="2")
  cf-icon(name="checkmark" scale="2")
  cf-icon(name="close" scale="2")
  cf-icon(name="dd-arrow-down-disabled" scale="2")
  cf-icon(name="dd-arrow-down" scale="2")
  cf-icon(name="drag-handle" scale="2")
  cf-icon(name="fd-headings" scale="2")
  cf-icon(name="fd-info-text" scale="2")
  cf-icon(name="fd-separator" scale="2")
  cf-icon(name="hint-arrow" scale="2")
  cf-icon(name="info" scale="2")
  cf-icon(name="lock" scale="2")
  cf-icon(name="markdown" style="width: 40px")
  cf-icon(name="new-ct" scale="2")
  cf-icon(name="plus" scale="2")
  cf-icon(name="plug" scale="2")
  cf-icon(name="star" scale="2")

Styleguide 25.1
*/

cf-icon[name="dd-arrow-down"]
  path
    fill: white

cf-icon[name="plus"]
  circle
    fill: $colors.blue-mid

cf-icon[name="plus"].inverted
  circle
    fill: white
  path
    stroke: $colors.blue-mid


/**
Navigation

Markup:
.styleguide-icon-list
  cf-icon(name="nav-api" scale="2")
  cf-icon(name="nav-ct" scale="2")
  cf-icon(name="nav-entries" scale="2")
  cf-icon(name="nav-media" scale="2")
  cf-icon(name="nav-settings" scale="2")
.styleguide-icon-list
  cf-icon(name="page-api" scale="2")
  cf-icon(name="page-ct" scale="2")
  cf-icon(name="page-entries" scale="2")
  cf-icon(name="page-media" scale="2")
  cf-icon(name="page-settings" scale="2")

Styleguide 25.2
*/

cf-icon[name="nav-ct"],
cf-icon[name="nav-entries"],
cf-icon[name="nav-media"],
cf-icon[name="nav-settings"]
  a:hover &,
  .is-active &
    g, path
      stroke: $colors.blue-mid

cf-icon[name="nav-api"],
cf-icon[name="nav-learn"]
  a:hover &,
  .is-active &
    path
      fill: $colors.blue-mid


