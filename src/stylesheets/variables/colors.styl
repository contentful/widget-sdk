@import './colors-deprecated.styl'

/*
Color scheme

Define new colors with the `hsl()` syntax.

Markup:
.styleguide-swatches
  .colors__dark-gray
    | dark-gray
  .colors__gray
    | gray
  .colors__light-gray
    | light-gray
  .colors__white
    | white
  .colors__dark-blue
    | dark-blue
  .colors__blue
    | blue
  .colors__light-blue
    | light-blue
  .colors__lightest-blue
    | lightest-blue
  .colors__green
    | green
  .colors__shadow-green
    | shadow-green
  .colors__aero-blue
    | aero-blue
  .colors__red
    | red
  .colors__yellow
    | yellow

Styleguide 1.0
*/

$colors = {
  text-dark:         hsl(216, 26%, 22%) //#2A3039
  text-mid:          hsl(212, 27%, 44%) //#536171
