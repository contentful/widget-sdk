  blue:          hsl(200,  81%, 54%)  // #28A8E9
  light-blue:    #A7E2FF,
  lightest-blue: hsl(201, 100%, 95%)  // #E8F7FF
  green:         hsl(160,  80%, 44%)  // #16C98D
  shadow-green:  #90C2AC,
  aero-blue:     #B9E9D4,
  red:           #F05650,
  dark-gray:     #2D2F31,
  gray:          #A2A9B1,
  light-gray:    #D6DCE4,
  yellow:        #F6E8B0,
  white:         #F6F8FA,
}

