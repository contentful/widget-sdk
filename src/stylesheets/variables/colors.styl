  element-darker:    hsl(199, 9%, 85%) //#C5D2D8
  element-dark:      hsl(200, 4%, 91%) //#DFE5E9
  element-mid:       hsl(200, 2%, 96%) //#EEF2F4
  element-light:     hsl(200, 1%, 98%) //#F7F9FA

  blue-darker:       hsl(212, 75%, 75%) //#3072BE
  blue-dark:         hsl(212, 71%, 81%) //#3C80CF
  blue-mid:          hsl(212, 67%, 89%) //#4A90E2
  blue-light:        hsl(212, 62%, 94%) //#5B9FEF

  green-dark:        hsl(160, 97%, 66%) //#05A972
  green-mid:         hsl(160, 89%, 79%) //#16C98D
  green-light:       hsl(160, 90%, 84%) //#16D595

  dark-gray:     #2D2F31,
  gray:          #A2A9B1,
  light-gray:    #D6DCE4,
