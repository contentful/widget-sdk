@require 'base/colors'

.search__filter-pill
  display: flex;
  line-height: 30px;
  height: 30px;
  margin-top: 5px;
  margin-right: 12px;
  border-radius: 3px;
  &:focus
    box-shadow: 0px 0px 0px 0.13em $colors.contrast-light;

.search__filter-pill-label
  background: $colors.bg-light;
  color: $colors.text-light;
  padding: 0 12px;
  border-radius: 3px 0 0 3px;
  cursor: pointer;

.search__select
  padding: 5px 10px;
  max-width: 200px;
  color: $colors.white;
  font-size: inherit;
  background-color: transparent;

.search__select-value
  border-radius: 0;
  background-color: $colors.blue-mid;
  border-radius: 0 3px 3px 0;
  -webkit-appearance: none;
  &:focus
    background-color: $colors.blue-dark;

.search__select-operator
  position: relative;
  &::before,
  &::after
    content: '';
    position: absolute;
    top: 0;
    bottom: 0;
    width: 50%;
  &::before
    left: 0;
    background: $colors.bg-light;
  &::after
    right: 0;
    background-color: $colors.blue-mid;
  .search__select
    position: relative;
    padding: 3px 8px;
    background-color: white;
    border-radius: 10em;
    z-index: 10;
    color: $colors.blue-darkest;
    border: 1px solid transparent;
    letter-spacing: 2px;
    text-transform: uppercase;
    text-align-last: center;
    font-size: 75%;
    -webkit-appearance: none;
    &:hover,
    &:focus,
    &:active
      border: 1px solid $colors.blue-darkest;
      cursor: pointer;

.search__input-text
  background-color: $colors.blue-mid;
  color: $colors.white;
  padding: 0 12px;
  min-width: 50px;
  max-width: 30ch;
  border-radius: 0 3px 3px 0;
  line-height: 30px;
  font-size: inherit;
  &:hover,
  &:focus,
  &:active
    background-image: linear-gradient(to left, $colors.blue-dark, $colors.blue-mid);
