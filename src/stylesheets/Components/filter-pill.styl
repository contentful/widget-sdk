@require 'base/colors'

.search__filter-pill
  display: flex;
  line-height: 30px;
  height: 30px;
  margin-top: 5px;
  margin-right: 12px;
  border-radius: 3px;
  &:hover
    box-shadow: 0 0 0 1px $colors.text-lightest;
  &:focus,
  &:active
    box-shadow: 0 0 0 1px $colors.contrast-light;

.search__filter-pill-label
  background-color: $colors.bg-light;
  color: $colors.text-light;
  padding: 0 12px;
  border-radius: 3px 0 0 3px;
  cursor: pointer;

.search__select
  padding: 5px 10px;
  max-width: 200px;
  color: $colors.white;
  font-size: inherit;
  background-color: transparent;

.search__select-value
  border-radius: 0;
  background-color: $colors.blue-mid;
  border-radius: 0 3px 3px 0;
  -webkit-appearance: none;
  &:focus
    background-color: $colors.blue-dark;

.search__select-operator
  display: flex;
  align-items: center;
  position: relative;
  &::before,
  &::after
    content: '';
    position: absolute;
    top: 0;
    bottom: 0;
    width: 50%;
  &::before
    left: 0;
    background-color: $colors.bg-light;
  &::after
    right: 0;
    background-color: $colors.blue-mid;
  .search__select
    position: relative;
    padding: 3px 8px;
    background-color: white;
    border-radius: 10em;
    z-index: 10;
    color: $colors.blue-darkest;
    border: 1px solid transparent;
    text-align-last: center;
    font-size: 85%;
    -webkit-appearance: none;
    &:hover,
    &:focus,
    &:active
      border: 1px solid $colors.blue-darkest;
      cursor: pointer;

.search__datepicker
  margin-left: -80px;


.search__input-text
  position: relative;
  background-color: $colors.blue-mid;
  min-width: 50px;
  max-width: 30ch;
  border-radius: 0 3px 3px 0;
  line-height: 30px;
  font-size: inherit;
  &:hover,
  &:focus,
  &:active
    background-image: linear-gradient(to left, $colors.blue-darkest, $colors.blue-mid);

  .search__input-spacer
    min-width: 50px;
    max-width: 30ch;
    white-space: nowrap
    // Add three characters to the left to give enough space
    // to the rendered value of the input and avoids weird jumping.
    padding: 0 10px 0 3ch;
    color: transparent;

.search__input
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  padding: 0 12px;
  background-color: transparent;
  color: $colors.white;
  line-height: 30px;
  font-size: inherit;

