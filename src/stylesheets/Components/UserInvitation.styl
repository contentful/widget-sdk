.user-invitation
  &--wrapper
    display: flex
    align-items: center
    flex-direction: column
    color: $colors.text-mid

  &--box
    padding: 20px 40px
    background-color: $colors.white
    border: 1px solid $colors.light-gray
    box-shadow: 0 1px 3px 0 rgba(0,0,0,0.08);
    max-width: 500px
    border-radius: 2px

  &--info, &--error
    padding: 8px 10px
    text-align: center
    line-height: 30px

  &--info
    border-bottom: 1px solid $colors.light-gray

  &--title
    line-height: 1.5

  &--inviter, &--error-details
    margin-bottom: 30px

  &--join-org-button
    margin-bottom: 20px

  &--org-details
    padding: 30px 15px
    margin: 0
    ul >li
        list-style-type: disc
