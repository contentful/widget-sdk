@require 'base/colors'

.search-next__filter-toggle
  align-self: stretch
  display: flex
  align-items: center
  cursor: pointer
  padding: 0 14px

  // We need to eat up the border of the search box
  margin-bottom: -1px

  font-size: 12px
  color: $colors.blue-mid

  border-bottom: 1px solid $colors.element-mid
  border-left: 1px solid transparent
  &.-focus
    border-bottom-color: $colors.blue-mid
  &:hover
    background: $colors.element-lightest
  &.-active
    border-left-color: $colors.blue-mid
    border-bottom-color: white

.search-next__completion-item
  height: 56px
  padding: 0 20px
  display: flex
  align-items: center
  cursor: pointer
  border-bottom: 1px solid $colors.element-light
  &:last-child
    border-bottom: 0

  &:focus 
    border: 1px solid black;

  &.--selected,
  &:hover
    // TODO use $colors
    background-color: #F4F4F2
    .__filter-pill
      background-color: $colors.blue-darkest

  .__filter-pill
    display: inline-block
    background: $colors.blue-mid
    color: white
    padding: 6px 10px 5px
    line-height: 18px
    border-radius: 3px
