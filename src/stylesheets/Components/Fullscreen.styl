.fullscreen
  &--container
    z-index: 113
    position: fixed
    top: 0
    bottom: 0
    left: 0
    right: 0
    background: $colors.element-lightest
    overflow-y: auto
    padding: 43px 65px

  &--wrapper
    margin: 15px auto
    max-width: 1500px

  &--header
    display: flex
    justify-content: space-between
    align-items: center
    margin: 0 0 30px
