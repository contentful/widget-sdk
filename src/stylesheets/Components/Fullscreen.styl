.fullscreen
  &--container, &--container-with-gradient
    z-index: 113
    position: fixed
    top: 0
    bottom: 0
    left: 0
    right: 0
    overflow-y: auto
    padding: 20px 90px

  &--container
    background: $colors.element-lightest

  &--container-with-gradient
    background-image: linear-gradient(
      to bottom,
      $colors.contrast-mid,
      $colors.contrast-mid 350px,
      $colors.element-lightest 350px,
      $colors.element-lightest
    )

  &--wrapper
    margin: 15px auto
    max-width: 1500px

  &--header
    display: flex
    justify-content: space-between
    align-items: center
    margin: 0 0 30px
