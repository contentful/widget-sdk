.apps-list-container
  max-width: 600px
  margin: 30px auto

.apps-list
  margin-bottom: 50px

.apps-list__intro
  margin-bottom: 20px

.apps-list-item
  display: flex
  flex-direction: row
  align-items: center
  padding: 10px 0
  border-bottom: 1px solid $colors.light-gray

  &__icon
    display: flex
  &__title
    flex-grow: 1
    padding: 0 20px
    display: block
  &__title-text
    font-size: 1.1rem
  &__actions
    display: block
    button
      margin-left: 20px

.app-page-skeleton
  margin-top: 30px
  width: 600px
