.user-details
  padding: 1em 2em 2em
  display: flex
.user-details__sidebar
  margin-right: 25px
  width: 400px
.user-details__content
  flex: 1

.user-details__profile-section
  border-bottom: 1px solid $colors.element-light
  padding-bottom: 20px
  margin-bottom: 20px

.users-search__filter-pill
  background-color: #D3DCE0
  margin: 0 10px 0 0!important

  &:hover
    box-shadow: none!important
  .search__select-value
    &::after
      color: #536171!important
    .users-search__select,
    .users-search__select:focus,
    .users-search__select:active
      color: #536171
      background-color: #D3DCE0
      border: none
      background-image: none
      &:hover
        background-color: #c3cCd0
        background-image: none

.users-search__filter-pill-label
  color: #536171!important
  &:hover
    cursor: default

.user-list__filters
  display: flex
  justify-content: space-between
  margin-bottom: 30px

.user-list__filters__column
  align-items: center
  color: #8091A5
  display: flex

.search__filter-pill--active
  .search__select-value
    &::after
      color: white!important
    .users-search__select,
    .users-search__select:focus,
    .users-search__select:active
      background-color: #4a90e2!important
      color: white!important

.user-list__reset-button
  margin-right: 20px;

.select-button
  border: 1px solid #d3dce0
  border-radius: 0;
  max-width: 100%
  &:hover
    background: white
  svg
    fill: #8091a5
  > span
    justify-content: space-between

.user-card
  display: flex
  align-content: center
  align-items: center

.user-card__avatar
  margin-right: 20px
  border-radius: 100%
  background: $colors.text-mid
  width: 50px
  height: 50px
.user-card--small .user-card__avatar
  width: 32px
  height: 32px

.user-card__name
  margin: 0
.user-card--small .user-card__name
  font-size: 14px

.user-card__email,
.user-card__name
  color: $colors.text-mid

.membership-list__item__menu__button,
.membership-list__item__menu__button:link
  transition: none
  margin-left: 10px
  visibility: hidden

.membership-list__item__menu__icon
  display: inline-block

.membership-list__item:hover
  .membership-list__item__menu__button
    visibility: visible
  .membership-list__item__menu__icon
    display: none

.definition-list
  &::after
    content: ''
    display: block
    clear: both

  dt
    clear: left
    float: left
    font-weight: 600
    margin-right: 10px
  dd
    float: left
    margin-bottom: 10px
    &:last-child
      margin-bottom: 0

.space-membership-editor:hover
  background: none