/* Cleanup notes
- get rid of nesting
- get rid of element selectors
- use more layout classes
*/

.x--api-home
  &.workbench-main
    padding-top: 0
    background-color: $gray-lightest
  &.workbench-main__right-content
    padding-top: $rhythm(1)
  &.workbench-main__left-sidebar
    padding-top: $rhythm(1)
    background-color: white

.api-home__boxes
  display: flex
  justify-content: space-around

$api-box-width = 30%
$api-box-right-margin = (100 - ($api-box-width * 3))/2

.api-home__box
  flex: 0 0 auto
  float: left
  width: $api-box-width
  padding: $rhythm(2) 3%
  min-height: 650px
  background-color: white
  box-shadow: 0 1px 4px rgba(0, 0, 0, 0.1)
  border-radius: 4px

  h2
    text-align: center
    text-transform: none
    font-size: 1.4rem
    margin-bottom: 2rem
    line-height: 1.8rem
  p
    line-height: 1.4rem
  li
    list-style-type: disc

.api-home__box-title
  display: block
  height: 5rem

.api-home__box-image
  display: block
  height: 115px
  margin-bottom: 2rem
  background-size: 115px
  background-repeat: no-repeat
  background-position: center

  &.cda
    background-image: url('/app/images/developers/cda.png')
  &.cma
    background-image: url('/app/images/developers/cma.png')
  &.demo
    background-image: url('/app/images/developers/demo.png')
