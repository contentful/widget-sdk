/**
 * Role list
 */

.role-list__item
  display: flex
  align-items: center
  justify-content: space-between
  border-bottom: 1px solid $colors.element-light
  padding: 10px 25px

.role-list__link
  width: 70%
  > *
    color: $colors.text-dark
  &.admin-role
    cursor: default
  &:not(.admin-role)
    cursor: pointer
  &:not(.admin-role):hover > *
    color: $colors.blue-mid
  i
    display: none
  &:hover i
    display: inline-block
    padding-left: 10px
    font-size: .8em

.admin-role
  h3 small
    display: inline-block
    padding-left: 10px
    font-size: .7em
    font-weight: normal
    color: $colors.text-light

/**
 * User list
 */

.user-list__group
  margin: 40px 0
  position: relative
  border-top: 1px solid $colors.element-light
  h3
    margin: 0
    display: inline-block
    position: absolute
    left: 15px
    top: -10px
    font-size: 1.4em
    background: white
    padding: 0 10px

.user-list__item
  display: flex
  align-items: center
  justify-content: space-between
  margin-top: 15px
  padding: 5px 25px
  cursor: default
  &:hover
    background: $colors.element-lightest

.user-list__info
  margin-left: 15px
  margin-right: auto
  strong
    display: block
    margin: 3px 0 2px
