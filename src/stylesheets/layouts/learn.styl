$learn-content-box()
  position: relative
  display: flex
  flex-direction: column
  justify-content: space-between
  width: 31%
  text-align: center
  border: 1px solid $colors.element-mid
  padding: 24px 30px
  &:not(:last-child)
    margin-right: 3.5%
  > .icon-wrapper
    position: absolute
    left: 50%
    margin-left: -25px
    width: 50px
    background: white
    top: 0
    > cf-icon
      background: white
      display: inline-block
      margin: -50% auto 0

.workbench-main__middle-content.x--learn-home
  width: 85%
  min-width: 1000px
  max-width: 1280px
  overflow: visible

.learn-subheading
  font-size: 16px
  color: $colors.text-mid

.learn__build-with-contentful
  margin-top: 80px
  margin-bottom: 50px

.learn-onboarding
  &__note
    margin: 0 0 $rhythm(2) 0
  &__completion
    font-weight: normal
    color: $colors.orange-dark
    margin-left: 4px
  &__steps
    display: flex
    margin-top: 50px
  &__step
    $learn-content-box()
    &.inactive
      &:after
        content: ''
        position: absolute
        top: -24px
        bottom: -1px
        left: -1px
        right: -1px
        background-color: rgba(255,255,255,0.6)
    .step
      &__description
        color: $colors.text-mid
        line-height: 1.4em
        margin-bottom: $rhythm(1)
      &__actions
        &__completed
          font-weight: bold
          color: $colors.green-darkest
          display: flex
          justify-content: center
          margin-bottom: $rhythm(0.5)
          > cf-icon
            margin-right: 4px
        &__link
          color: $colors.text-light
          text-decoration: underline

// A/B experiment - onboarding-invite-users
.learn-experiment
  border: 1px solid $colors.element-mid
  background-color: $colors.element-light
  margin: $new-rhythm(1.5) auto 0 auto
  padding: $new-rhythm(1)

.learn-experiment__form
  display: flex
  > *:not(:last-child)
    margin-right: 10px
    height: 40px

.learn-experiment__email
  width: 440px

.learn-experiment__role
  width: 210px

