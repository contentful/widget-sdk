.locale-list
  .result-list
    .cell-name
      width: 10%
      padding-left: 25px;
    .cell-status
      text-align: left
    .cell-enabled-for
      width: 25%

  .without-left-nav
    margin-top: $tab-main-margin-top
    $stretch-y()
    $tab-workbench()

.locale-list__advice
  position: relative
  top: 10em

.locale-list__advice-frame
  width: 110ex
  padding: $rhythm(1) 1.5em
  border: 1px solid $cfnext-light-gray
  background-color: lighten($cfnext-light-gray, 80%)
  border-radius: 3px

  .advice__title
    font-size: 1.33em

  .advice__description
    font-size: 1.1em
    margin-left: 0
    margin-right: 0
