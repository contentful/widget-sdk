.content-type__fields
  max-width: $field-editor-width

$ct__field-padding = 0.8em
.content-type__field
  font-size: 1.15em
  padding-left: 0.8em
  line-height: $rhythm(2)
  display: flex
  align-items: baseline
  border-top: 1px solid $gray-lightest
  &:last-child()
    border-bottom: 1px solid $gray-lightest


.ct__field__name
  flex-grow: 1
  font-weight: bolder

.ct__field__type
  margin-right: 1em
  color: $gray

a.ct__field__edit
  cursor: pointer

.ct__field__drag-handle
  height: $rhythm(2)
  margin-left:   0.3em
  padding-left:  $ct__field-padding
  padding-right: $ct__field-padding
  cursor: move
  cursor: -webkit-grabbing
  cursor: -moz-grab
  cursor: -moz-grabbing
