.tab-header
  $stretch(0, 0, false, 0)
  display: flex
  height: $tab-header-height
  border-radius: 3px 3px 0 0
  border-bottom: 1px solid $gray-light
  background-color: $gray-lightest
  box-shadow: 0 1px 4px rgba(0,0,0,0.07)
  .knowledge-base-link
    padding: 0 4px
    font-size: $tab-header-font-size


.tab-header__title
  align-self: center
  min-width: $left-nav-width
  padding-left: 25px
  padding-right: 15px
  display: flex
  align-items: center
  > cf-icon
    margin-right: 1em
  > h1
    margin: 0;
    font-size: $tab-header-font-size
    color: $gray-darkest
    white-space: nowrap

.tab-header__search
  flex-basis: 60%
  flex-grow: 3
  max-width: 1100px
  padding-right: 20px

.tab-header__actions
  display: flex
  justify-content: flex-end
  align-items: center
  margin-left: auto
  > *
    margin-right: 25px
