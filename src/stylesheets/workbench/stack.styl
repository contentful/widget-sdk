/**
Workbench stack

Markup:
.styleguide-stretch-container--short
  .workbench(ng-click="hide = !hide")
    .workbench-stack.animate(ng-if="!hide")
      .workbench-stack__padding
      .workbench-stack__content
        .workbench
          .workbench-header
            | Stacked
          .workbench-main
            | Click to slide out
    .workbench-header
    .workbench-main
      | Click to slide in

Styleguide 9.8
*/
.workbench-stack
  $stretch(0, 0, 0, 0)
  z-index: 100
  overflow: hidden
  transition: opacity 0.2s linear
  &.ng-enter, &.ng-leave-active.ng-leave
    opacity: 0
  &.ng-leave, &.ng-enter-active.ng-enter
    opacity: 1

.workbench-stack__content
  position: relative
  height: 100%
  background: white
  margin-left: 6em
  box-shadow: -3px 0px 3px hsla(0, 0%, 0%, 0.15)
  .ng-enter > &, .ng-leave-active.ng-leave > &
    // Transition needs to be only on ngEnter / ngLeave otherwise it causes a
    // weird Chrome layout bug in the bulk editor
    transition: transform 0.2s ease-out
    transform: translateX(2em)
  .ng-leave > &, .ng-enter-active.ng-enter > &
    // Transition needs to be only on ngEnter / ngLeave otherwise it causes a
    // weird Chrome layout bug in the bulk editor
    transition: transform 0.2s ease-out
    transform: translateX(0%)

.workbench-stack__padding
  $stretch(0, 0, 0, 0)
  background-color: hsla(0, 0%, 0%, 0.3)
  cursor: pointer
