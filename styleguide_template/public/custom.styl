body
  overflow: visible

#kss-node .kss-section
  max-width: 70em

.kss-box
  max-width: 600px
  font-size: 1.2em

#kss-nav,
.overview p
 font-size: 1.2em

.kss-title,
.overview h1
  margin-bottom: 2em

.styleguide-stretch-container,
.styleguide-stretch-container--short,
.styleguide-stretch-container--medium,
.styleguide-stretch-container--long
  position: relative
  width: 100%

.styleguide-stretch-container--short
  height: 200px
.styleguide-stretch-container--medium
  height: 500px
.styleguide-stretch-container--long
  height: 800px

.styleguide-opaque-box1
  border: 1px dashed lightblue
.styleguide-opaque-box2
  border: 1px dashed indigo
.styleguide-opaque-box3
  border: 1px dashed deepskyblue
.styleguide-opaque-box4
  border: 1px dashed chocolate

.styleguide-filled-box1
  background-color: indianred
.styleguide-filled-box2
  background-color: khaki
.styleguide-filled-box3
  background-color: lavender
.styleguide-filled-box4
  background-color: lightsalmon



